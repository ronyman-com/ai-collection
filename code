    def _switch_theme(self, theme: str):
        """Switch application theme"""
        theme_map = {
            "üåô Dark": "dark",
            "‚òÄÔ∏è Light": "light", 
            "üñ•Ô∏è System": "system"
        }
        self.theme_manager.set_theme(theme_map[theme])
        
        # Refresh sidebar colors when theme changes
        self._refresh_sidebar_colors()

    def _refresh_sidebar_colors(self):
        """Refresh sidebar colors after theme change"""
        # Update sidebar background
        sidebar_color = self._get_sidebar_color()
        self.sidebar.configure(fg_color=sidebar_color)
        
        # Update button colors
        button_colors = self._get_button_colors()
        
        # Update all sidebar buttons
        for widget in self.sidebar.winfo_children():
            if hasattr(widget, 'winfo_children'):
                for child in widget.winfo_children():
                    if isinstance(child, ctk.CTkScrollableFrame):
                        for btn in child.winfo_children():
                            if isinstance(btn, ctk.CTkButton) or hasattr(btn, 'configure'):
                                # Update button colors
                                btn.configure(
                                    fg_color=button_colors["normal"],
                                    hover_color=button_colors["hover"],
                                    text_color=button_colors["text"],
                                    border_color=button_colors["border"]
                                )
        
        # Update theme switcher colors
        if hasattr(self, 'theme_switch'):
            self.theme_switch.configure(
                fg_color=button_colors["normal"],
                selected_color=button_colors["selected"],
                selected_hover_color=button_colors["selected_hover"],
                unselected_color=button_colors["unselected"],
                unselected_hover_color=button_colors["unselected_hover"]
            )
    
    def _clear_content(self):
        """Clear content frame"""
        for widget in self.content_frame.winfo_children():
            widget.destroy()
    
    def _validate_vm_data(self, vm_data: dict) -> Tuple[bool, List[str]]:
        """Validate VM data before saving"""
        return self.validators.validate_vm_config(vm_data)
    
    def _backup_database(self):
        """Backup database"""
        success, message = self.helpers.backup_database(
            Path(self.config.database_path)
        )
        if success:
            messagebox.showinfo("Backup Successful", message)
        else:
            messagebox.showerror("Backup Failed", message)
    
    def _restore_database(self):
        """Restore database from backup"""
        from tkinter import filedialog
        backup_file = filedialog.askopenfilename(
            title="Select Backup File",
            filetypes=[("Database files", "*.db"), ("All files", "*.*")]
        )
        
        if backup_file:
            if messagebox.askyesno("Confirm Restore", 
                                  "Restore will replace current database. Continue?"):
                success, message = self.helpers.restore_database(
                    Path(backup_file),
                    Path(self.config.database_path)
                )
                if success:
                    messagebox.showinfo("Restore Successful", message)
                    # Reload VMs after restore
                    self._load_vms()
                    self._refresh_terminal_vms()
                    self._show_dashboard()
                else:
                    messagebox.showerror("Restore Failed", message)

    def _setup_vm_terminal_tab_modern(self):
        """Setup VM terminal tab with modern design"""
        container = self.vm_terminal_tab
        
        # Terminal header with gradient
        header_frame = ctk.CTkFrame(
            container,
