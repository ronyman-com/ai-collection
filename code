from datetime import datetime
from pathlib import Path
import traceback
from venv import logger
import customtkinter as ctk
from tkinter import messagebox
from typing import List, Optional, Tuple, Dict
from localvm.config import config
from localvm.database import DatabaseManager
from localvm.deployment_engine import DeploymentEngine
from localvm.gui.credentials_dialog import CredentialsDialog
from localvm.gui.deployment_dialog import DeploymentDialog
from localvm.gui.firewall_dialog import FirewallDialog
from localvm.gui.australia_ip_dialog import AustraliaIPDialog
from localvm.gui.file_manager_dialog import FileManagerDialog
from localvm.gui.vm_dialog import VMDialog
from localvm.gui.terminal_widget import TerminalWidget
from localvm.gui.theme_manager import ThemeManager
from localvm.gui.widgets import ModernButton, CardFrame, StatusBadge
from localvm.ngfw_manager import NextGenFirewall
from localvm.version_manager import VersionManager
from localvm.vm_manager import VirtualMachineManager
from models.vm_model import VirtualMachine
from utils.validators import Validators
from utils.helpers import Helpers
from localvm.gui.domain_manager_dialog import DomainManagerDialog

# Import new advanced managers
from localvm.gui.network_manager_dialog import NetworkManagerDialog
from localvm.gui.database_manager_dialog import DatabaseManagerDialog
from localvm.gui.api_manager_dialog import APIManagerDialog
from localvm.gui.dashboard_dialog import SystemDashboardDialog

class MainWindow(ctk.CTk):
    """Main application window"""
    
    def __init__(self):
        super().__init__()
        
         # Initialize components
        self.config = config
        self.db = DatabaseManager()
        self.terminal_widget = None
        
        # Check and run version migrations
        logger.info("Checking for version migrations...")
        self.version_manager = VersionManager(self.config)
        if not self.version_manager.check_and_migrate():
            logger.warning("Version migration check had issues, but continuing...")
        else:
            logger.info("Version migration check completed successfully")

        self.deployment_engine = DeploymentEngine(self.db_manager)
        
        self.theme_manager = ThemeManager()
        self.vms: List[VirtualMachine] = []
        self.ngfw = NextGenFirewall()
        self.vm_manager = VirtualMachineManager()
        self.validators = Validators()
        self.helpers = Helpers()
        self._check_dependencies()
        
        # Initialize notebook and terminal references
        self.vm_notebook = None
    
        
        self._setup_window()
        self._setup_ui()
        self._load_vms()
        
        # Advanced managers (lazy loaded)
        self.network_manager = None
        self.db_manager = None
        self.api_manager = None



        
    def _setup_window(self):
        """Configure main window"""
        self.title(f"{self.config.app_name} v{self.config.app_version}")
        self.geometry(self.config.window_size)
        self.minsize(1000, 600)
        
        # Set theme
        ctk.set_appearance_mode(self.theme_manager.current_theme)
        ctk.set_default_color_theme("blue")
    
    def _setup_ui(self):
        """Setup main UI"""
        # Configure grid
        self.grid_columnconfigure(1, weight=1)
        self.grid_rowconfigure(0, weight=1)
        
        # Sidebar with logo - Use darker base color that works with both themes
        sidebar_color = self._get_sidebar_color()
        self.sidebar = CardFrame(self, width=250, fg_color=sidebar_color)
        self.sidebar.grid(row=0, column=0, sticky="nsew", padx=(10, 5), pady=10)
        
        # Make sidebar scrollable
        sidebar_container = ctk.CTkFrame(self.sidebar, fg_color="transparent")
        sidebar_container.pack(fill="both", expand=True)
        
        # Create scrollable frame for buttons
        scrollable_frame = ctk.CTkScrollableFrame(
            sidebar_container, 
            fg_color="transparent",
            scrollbar_button_color=sidebar_color,
            scrollbar_button_hover_color=sidebar_color
        )
        scrollable_frame.pack(fill="both", expand=True, padx=5, pady=5)
        
        # Load logo if exists
        app_info = self.config.get_app_info()
        
        if app_info.get('logo_path') and Path(app_info['logo_path']).exists():
            try:
                from PIL import Image
                
                # Load and resize logo
                logo_image = ctk.CTkImage(
                    light_image=Image.open(app_info['logo_path']),
                    dark_image=Image.open(app_info['logo_path']),
                    size=(80, 80)
                )
                
                logo_label = ctk.CTkLabel(
                    scrollable_frame,
                    image=logo_image,
                    text=""
                )
                logo_label.pack(pady=(15, 10))
                
            except ImportError:
                # PIL not available, use text logo
                title = ctk.CTkLabel(
                    scrollable_frame,
                    text="LocalVM",
                    font=("Segoe UI", 24, "bold")
                )
                title.pack(pady=(20, 5))
                
            except Exception as e:
                logger.error(f"Error loading logo: {e}")
                # Fallback to text
                title = ctk.CTkLabel(
                    scrollable_frame,
                    text="LocalVM",
                    font=("Segoe UI", 24, "bold")
                )
                title.pack(pady=(20, 5))
        else:
            # Text logo if image not found
            title = ctk.CTkLabel(
                scrollable_frame,
                text="LocalVM",
                font=("Segoe UI", 24, "bold")
            )
            title.pack(pady=(20, 5))
        
        # Version info - using version manager
        from version import get_version_display
        version_text = get_version_display()
        
        version_label = ctk.CTkLabel(
            scrollable_frame,
            text=version_text,
            font=("Segoe UI", 10),
            text_color="gray"
        )
        version_label.pack(pady=(0, 5))
        
        # Company name
        company_label = ctk.CTkLabel(
            scrollable_frame,
            text=self.config.company_name,
            font=("Segoe UI", 11, "italic"),
            text_color="#60A5FA"
        )
        company_label.pack(pady=(0, 30))
        
        # Sidebar buttons - Updated with new managers
        buttons = [
            ("üè† Dashboard", self._show_dashboard),
            ("üñ•Ô∏è All VMs", self._show_vms),
            ("üåê Network Manager", self.open_network_manager),
            ("üöÄ One-Click Deploy", self.open_deployment_manager), 
            ("üóÑÔ∏è Database Manager", self.open_database_manager),
            ("üîå API Manager", self.open_api_manager),
            ("üìÅ File Manager", self._show_file_manager),
            ("üî• Firewall", self._show_firewall),
            ("üåç Domain Manager", self.open_domain_manager),
            ("üá¶üá∫ Australian IPs", self._show_australia_ips),
            ("üìä System Dashboard", self.open_system_dashboard),
            ("üìã Logs", self._show_logs), 
            ("‚öôÔ∏è Settings", self._show_settings),
            ("üìà Stats", self._show_stats),
            ("‚ÑπÔ∏è About", self._show_about), 
            ("‚ùì Help", self._show_help)
        ]
        
        # Get button colors based on theme
        button_colors = self._get_button_colors()
        
        for text, command in buttons:
            btn = ModernButton(
                scrollable_frame,
                text=text,
                command=command,
                anchor="w",
                height=40,
                fg_color=button_colors["normal"],
                hover_color=button_colors["hover"],
                text_color=button_colors["text"],
                border_color=button_colors["border"],
                border_width=1
            )
            btn.pack(fill="x", padx=10, pady=5)
        
        # Theme switcher
        theme_label = ctk.CTkLabel(
            scrollable_frame,
            text="Theme:",
            font=("Segoe UI", 12)
        )
        theme_label.pack(anchor="w", padx=10, pady=(30, 5))
        
        self.theme_switch = ctk.CTkSegmentedButton(
            scrollable_frame,
            values=["üåô Dark", "‚òÄÔ∏è Light", "üñ•Ô∏è System"],
            command=self._switch_theme,
            height=30,
            fg_color=button_colors["normal"],
            selected_color=button_colors["selected"],
            selected_hover_color=button_colors["selected_hover"],
            unselected_color=button_colors["unselected"],
            unselected_hover_color=button_colors["unselected_hover"]
        )
        self.theme_switch.pack(fill="x", padx=10, pady=(0, 20))
        self.theme_switch.set("üñ•Ô∏è System")
        
        # Add a spacer at the bottom to ensure scrolling works well
        ctk.CTkFrame(scrollable_frame, height=20, fg_color="transparent").pack()
        
        # Main content area
        self.main_frame = ctk.CTkFrame(self)
        self.main_frame.grid(row=0, column=1, sticky="nsew", padx=(5, 10), pady=10)
        self.main_frame.grid_columnconfigure(0, weight=1)
        self.main_frame.grid_rowconfigure(1, weight=1)
        
        # Top bar
        top_bar = ctk.CTkFrame(self.main_frame, height=50, fg_color="transparent")
        top_bar.grid(row=0, column=0, sticky="ew", padx=10, pady=(10, 0))
        top_bar.grid_columnconfigure(1, weight=1)
        
        # Welcome label
        self.welcome_label = ctk.CTkLabel(
            top_bar,
            text="Welcome to LocalVM Manager",
            font=("Segoe UI", 20, "bold")
        )
        self.welcome_label.grid(row=0, column=0, sticky="w")
        
        # Add VM button
        self.add_vm_btn = ModernButton(
            top_bar,
            text="+ Add VM",
            command=self._add_vm,
            width=100,
            fg_color="#3B82F6",  # Keep this as blue for primary action
            hover_color="#2563EB"
        )
        self.add_vm_btn.grid(row=0, column=1, sticky="e")
        
        # Content area
        self.content_frame = ctk.CTkFrame(self.main_frame)
        self.content_frame.grid(row=1, column=0, sticky="nsew", padx=10, pady=10)
        
        # Show dashboard by default
        self._show_dashboard()

    def open_deployment_manager(self):
        """Open One-Click Deployment dialog"""
        try:
            dialog = DeploymentDialog(self, self.deployment_engine)
            dialog.grab_set()
        except Exception as e:
            messagebox.showerror("Error", f"Failed to open Deployment Manager: {str(e)}")

    def _check_dependencies(self):
        """Check for required Python dependencies"""
        missing_deps = []
        
        # Check for psutil
        try:
            import psutil
        except ImportError:
            missing_deps.append("psutil")
        
        if missing_deps:
            # Show warning but don't block startup
            logger.warning(f"Missing dependencies: {', '.join(missing_deps)}")
            
            # Ask user if they want to install missing dependencies
            response = messagebox.askyesno(
                "Missing Dependencies",
                f"The following packages are missing:\n\n"
                f"{', '.join(missing_deps)}\n\n"
                "Would you like to install them now?",
                parent=self
            )
            
            if response:
                self._install_dependencies(missing_deps)

    def _install_dependencies(self, packages):
        """Install missing dependencies"""
        try:
            import subprocess
            import sys
            
            # Install each missing package
            for package in packages:
                logger.info(f"Installing {package}...")
                subprocess.check_call([
                    sys.executable, "-m", "pip", "install", package
                ])
            
            messagebox.showinfo(
                "Dependencies Installed",
                "Dependencies installed successfully. Please restart the application.",
                parent=self
            )
            
            # Close the application
            self.quit()
            
        except Exception as e:
            logger.error(f"Failed to install dependencies: {e}")
            messagebox.showerror(
                "Installation Failed",
                f"Failed to install dependencies:\n\n{str(e)}",
                parent=self
            )


    def _get_sidebar_color(self):
        """Get sidebar background color based on theme"""
        current_theme = ctk.get_appearance_mode()
        
        if current_theme == "Light":
            return "#2D3748"  # Dark gray for light mode (provides contrast)
        else:  # Dark or System (dark)
            return "#1A202C"  # Slightly darker than main dark background
        
    def _get_button_colors(self):
        """Get button colors based on current theme"""
        current_theme = ctk.get_appearance_mode()
        
        if current_theme == "Light":
            # Light theme button colors (dark gray buttons on dark sidebar)
            return {
                "normal": "#4A5568",      # Dark gray
                "hover": "#2D3748",       # Darker gray on hover
                "text": "#FFFFFF",        # White text
                "border": "#718096",      # Medium gray border
                "selected": "#3182CE",    # Blue for selected state
                "selected_hover": "#2C5282",  # Darker blue
                "unselected": "#4A5568",  # Same as normal
                "unselected_hover": "#2D3748"  # Same as hover
            }
        else:  # Dark or System (dark)
            # Dark theme button colors (slightly lighter gray on dark sidebar)
            return {
                "normal": "#4A5568",      # Medium dark gray
                "hover": "#2D3748",       # Darker gray on hover
                "text": "#FFFFFF",        # White text
                "border": "#718096",      # Light gray border
                "selected": "#3182CE",    # Blue for selected state
                "selected_hover": "#2C5282",  # Darker blue
                "unselected": "#4A5568",  # Same as normal
                "unselected_hover": "#2D3748"  # Same as hover
            }
    
