    def _load_vms_to_list_modern(self):
        """Load VMs into modern list view"""
        # Clear current list
        for widget in self.vm_list_inner.winfo_children():
            widget.destroy()
        
        if not self.vms:
            # Show empty state with illustration
            empty_frame = ctk.CTkFrame(self.vm_list_inner, fg_color="transparent")
            empty_frame.pack(fill="both", expand=True, pady=100)
            
            ctk.CTkLabel(
                empty_frame,
                text="üìÅ",
                font=("Segoe UI", 64),
                text_color="#D1D5DB"
            ).pack(pady=(0, 20))
            
            ctk.CTkLabel(
                empty_frame,
                text="No Virtual Machines Found",
                font=("Segoe UI", 18, "bold"),
                text_color="#6B7280"
            ).pack(pady=(0, 10))
            
            ctk.CTkLabel(
                empty_frame,
                text="Create your first VM to get started",
                font=("Segoe UI", 14),
                text_color="#9CA3AF"
            ).pack(pady=(0, 30))
            
            ModernButton(
                empty_frame,
                text="+ Create Your First VM",
                command=self._add_vm,
                width=200,
                height=50,
                font=("Segoe UI", 14, "bold"),
                fg_color="#3B82F6",
                hover_color="#2563EB"
            ).pack()
            return
        
        # Create modern VM cards
        for vm in self.vms:
            self._create_vm_card(vm)
    
    def _create_vm_card(self, vm: VirtualMachine):
        """Create a modern VM card"""
        card = CardFrame(self.vm_list_inner, height=140, corner_radius=12)
        card.pack(fill="x", padx=5, pady=8)
        
        # Store VM ID
        card.vm_id = vm.id
        
        # VM icon based on OS
        os_icons = {
            "Windows": "ü™ü",
            "Linux": "üêß",
            "macOS": "üçé",
            "BSD": "üëë",
            "Other": "üíª"
        }
        os_icon = os_icons.get(vm.os_type, "üíª")
        
        # Left side: Icon and basic info
        left_frame = ctk.CTkFrame(card, fg_color="transparent")
        left_frame.place(x=20, y=20)
        
        # OS Icon
        ctk.CTkLabel(
            left_frame,
            text=os_icon,
            font=("Segoe UI", 24)
        ).pack(side="left", padx=(0, 15))
        
        # VM Info
        info_frame = ctk.CTkFrame(left_frame, fg_color="transparent")
        info_frame.pack(side="left")
        
        # VM Name with status dot
        name_frame = ctk.CTkFrame(info_frame, fg_color="transparent")
        name_frame.pack(anchor="w")
        
        # Status dot
        status_colors = {
            "Running": "#10B981",
            "Stopped": "#EF4444",
            "Paused": "#F59E0B",
            "Error": "#DC2626"
        }
        ctk.CTkLabel(
            name_frame,
            text="‚óè",
            font=("Segoe UI", 12),
            text_color=status_colors.get(vm.state, "#6B7280")
        ).pack(side="left", padx=(0, 10))
        
        # VM Name
        ctk.CTkLabel(
            name_frame,
            text=vm.name,
            font=("Segoe UI", 16, "bold"),
            cursor="hand2"
        ).pack(side="left")
        
        # Click to view details
        for widget in name_frame.winfo_children():
            widget.bind("<Button-1>", lambda e, v=vm: self._show_vm_details_modern(v))
        
        # Additional info
        ctk.CTkLabel(
            info_frame,
            text=f"{vm.hypervisor} ‚Ä¢ {vm.os_type}",
            font=("Segoe UI", 12),
            text_color="#6B7280"
        ).pack(anchor="w", pady=(5, 0))
        
        # Right side: Stats and actions
        right_frame = ctk.CTkFrame(card, fg_color="transparent")
        right_frame.place(relx=1.0, x=-20, y=20, anchor="ne")
        
        # Resource stats
        stats_frame = ctk.CTkFrame(right_frame, fg_color="transparent")
        stats_frame.pack(side="left", padx=(0, 30))
        
        stats = [
            (f"{vm.cpu_cores} CPU", "#3B82F6"),
            (f"{vm.memory_gb:.1f}GB RAM", "#8B5CF6"),
            (f"{vm.disk_gb}GB Disk", "#10B981")
        ]
        
        for i, (text, color) in enumerate(stats):
            stat_label = ctk.CTkLabel(
                stats_frame,
                text=text,
                font=("Segoe UI", 11, "bold"),
                text_color=color
            )
            stat_label.grid(row=0, column=i, padx=(0 if i == 0 else 15, 0))
        
        # IP Address
        if vm.ip_address:
            ip_frame = ctk.CTkFrame(stats_frame, fg_color="transparent")
            ip_frame.grid(row=1, column=0, columnspan=3, pady=(10, 0), sticky="w")
            
            ctk.CTkLabel(
                ip_frame,
                text="IP:",
                font=("Segoe UI", 11),
                text_color="#6B7280"
            ).pack(side="left", padx=(0, 5))
            
            ctk.CTkLabel(
                ip_frame,
                text=vm.ip_address,
                font=("Segoe UI", 11, "bold"),
                text_color="#1F2937",
                cursor="hand2"
            ).pack(side="left")
            
            # Click to copy IP
            for widget in ip_frame.winfo_children():
                widget.bind("<Button-1>", lambda e, ip=vm.ip_address: self._copy_to_clipboard(ip))
        
        # Quick actions (bottom of card)
        actions_frame = ctk.CTkFrame(card, fg_color="#F9FAFB", height=50, corner_radius=0)
        actions_frame.place(x=0, rely=1.0, y=-50, relwidth=1.0)
        
        # Action buttons
        actions = [
            ("‚ñ∂ Start", lambda: self._start_vm(vm.id), "#10B981"),
            ("‚è∏ Pause", lambda: self._pause_vm(vm.id), "#F59E0B"),
            ("‚èπ Stop", lambda: self._stop_vm(vm.id), "#EF4444"),
            ("üîë Creds", lambda: self._show_credentials(vm.id), "#8B5CF6"),
            ("üöÄ Deploy", lambda: self._deploy_to_vm(vm), "#EC4899"), 
            ("‚úè Edit", lambda: self._edit_vm(vm), "#3B82F6"),
            ("üóë Delete", lambda: self._delete_vm(vm.id), "#DC2626"),
            ("üîå SSH", lambda: self._open_vm_terminal(vm), "#059669")
        ]
        
        for i, (text, command, color) in enumerate(actions):
            ModernButton(
                actions_frame,
                text=text,
                command=command,
                width=80,
                height=30,
                font=("Segoe UI", 10),
                fg_color=color,
                hover_color=self._darken_color(color)
            ).place(x=20 + i * 90, y=10)

    
    def _deploy_to_vm(self, vm: VirtualMachine):
        """Deploy applications to VM"""
        dialog = DeploymentDialog(self, self.deployment_engine, vm.id)
        dialog.grab_set()
    
    def _darken_color(self, color):
        """Darken a hex color for hover effect"""
        import colorsys
        # Convert hex to RGB
        color = color.lstrip('#')
        rgb = tuple(int(color[i:i+2], 16) / 255.0 for i in (0, 2, 4))
        
        # Convert to HSL and darken
        h, l, s = colorsys.rgb_to_hls(*rgb)
        l = max(0, l - 0.1)  # Darken by 10%
        
        # Convert back to RGB and hex
        rgb = colorsys.hls_to_rgb(h, l, s)
        rgb = tuple(int(c * 255) for c in rgb)
        return f'#{rgb[0]:02x}{rgb[1]:02x}{rgb[2]:02x}'
    
    def _show_vm_details_modern(self, vm: VirtualMachine):
        """Show VM details in modern details tab"""
        self.vm_notebook.set("üìä VM Details")
        
        # Clear details container
        for widget in self.vm_details_container.winfo_children():
            widget.destroy()
        
        # Create modern details layout
        main_frame = ctk.CTkFrame(self.vm_details_container, fg_color="transparent")
        main_frame.pack(fill="both", expand=True)
        
        # Header with back button
        header_frame = ctk.CTkFrame(main_frame, fg_color="transparent", height=60)
        header_frame.pack(fill="x", pady=(0, 20))
        
        ModernButton(
            header_frame,
            text="‚Üê Back to List",
            command=lambda: self.vm_notebook.set("üìã VM List"),
            width=120,
            height=36,
            font=("Segoe UI", 11)
        ).pack(side="left")
        
        # VM title and status
        title_frame = ctk.CTkFrame(header_frame, fg_color="transparent")
        title_frame.pack(side="right")
        
        ctk.CTkLabel(
            title_frame,
            text=vm.name,
            font=("Segoe UI", 24, "bold")
        ).pack(side="left", padx=(0, 20))
        
        # Status badge
        StatusBadge(title_frame, vm.state).pack(side="left")
        
        # Two-column layout
        columns_frame = ctk.CTkFrame(main_frame, fg_color="transparent")
        columns_frame.pack(fill="both", expand=True)
        
        # Left column: Details
        left_column = ctk.CTkFrame(columns_frame, fg_color="transparent", width=400)
        left_column.pack(side="left", fill="y", padx=(0, 20))
        
        # Details card
        details_card = CardFrame(left_column, corner_radius=12)
        details_card.pack(fill="both", expand=True)
        
        ctk.CTkLabel(
            details_card,
            text="VM Details",
            font=("Segoe UI", 16, "bold")
        ).pack(anchor="w", padx=20, pady=(20, 10))
        
        # Details grid
        details = [
            ("Description", vm.description or "No description"),
            ("Hypervisor", vm.hypervisor),
            ("OS Type", vm.os_type),
            ("Created", vm.created_at or "Unknown"),
            ("Last Started", vm.last_started or "Never"),
            ("Network Type", getattr(vm, 'network_type', 'NAT'))
        ]
        
        for label, value in details:
            detail_frame = ctk.CTkFrame(details_card, fg_color="transparent")
            detail_frame.pack(fill="x", padx=20, pady=8)
            
            ctk.CTkLabel(
                detail_frame,
                text=label + ":",
                font=("Segoe UI", 12, "bold"),
                width=120
            ).pack(side="left")
            
            ctk.CTkLabel(
                detail_frame,
                text=value,
                font=("Segoe UI", 12)
            ).pack(side="left")
        
        # Right column: Resources and actions
        right_column = ctk.CTkFrame(columns_frame, fg_color="transparent")
        right_column.pack(side="right", fill="both", expand=True)
        
        # Resources card
        resources_card = CardFrame(right_column, corner_radius=12)
        resources_card.pack(fill="x", pady=(0, 20))
        
        ctk.CTkLabel(
            resources_card,
            text="Resources",
            font=("Segoe UI", 16, "bold")
        ).pack(anchor="w", padx=20, pady=(20, 15))
        
        # Resource metrics
        resources = [
            ("CPU Cores", f"{vm.cpu_cores}", "#3B82F6"),
            ("Memory", f"{vm.memory_gb:.1f} GB", "#8B5CF6"),
            ("Disk Space", f"{vm.disk_gb} GB", "#10B981"),
            ("IP Address", vm.ip_address or "Not assigned", "#F59E0B"),
            ("MAC Address", getattr(vm, 'mac_address', 'Auto-generated'), "#EC4899")
        ]
        
        for i, (label, value, color) in enumerate(resources):
            resource_frame = ctk.CTkFrame(resources_card, fg_color="transparent")
            resource_frame.pack(fill="x", padx=20, pady=8)
            
            ctk.CTkLabel(
                resource_frame,
                text=label + ":",
                font=("Segoe UI", 12, "bold"),
                width=100
            ).pack(side="left")
            
            ctk.CTkLabel(
                resource_frame,
                text=value,
                font=("Segoe UI", 12, "bold"),
                text_color=color
            ).pack(side="left")
        
        # Actions card
        actions_card = CardFrame(right_column, corner_radius=12)
        actions_card.pack(fill="x")
        
        ctk.CTkLabel(
            actions_card,
            text="Quick Actions",
            font=("Segoe UI", 16, "bold")
        ).pack(anchor="w", padx=20, pady=(20, 15))
        
        # Action buttons grid
        action_buttons = [
            ("‚ñ∂ Start VM", lambda: self._start_vm(vm.id), "#10B981"),
            ("‚è∏ Pause VM", lambda: self._pause_vm(vm.id), "#F59E0B"),
            ("‚èπ Stop VM", lambda: self._stop_vm(vm.id), "#EF4444"),
            ("üìä Performance", lambda: self._show_vm_performance(vm.id), "#3B82F6"),
            ("üíæ Snapshot", lambda: self._take_vm_snapshot(vm.id), "#8B5CF6"),
            ("üîå SSH Connect", lambda: self._open_vm_terminal(vm), "#059669"),
            ("üîë Credentials", lambda: self._show_credentials(vm.id), "#F59E0B"),
            ("üìã Logs", lambda: self._show_vm_logs(vm.id), "#6B7280")
        ]
        
        # Create grid of buttons
        for i in range(0, len(action_buttons), 2):
            row_frame = ctk.CTkFrame(actions_card, fg_color="transparent")
            row_frame.pack(fill="x", padx=20, pady=5)
            
            for j in range(2):
                if i + j < len(action_buttons):
                    text, command, color = action_buttons[i + j]
                    ModernButton(
                        row_frame,
                        text=text,
                        command=command,
                        width=180,
                        height=40,
                        font=("Segoe UI", 11),
                        fg_color=color,
                        hover_color=self._darken_color(color)
                    ).pack(side="left", padx=(0 if j == 0 else 10, 0))
    
    def _filter_vm_list_modern(self, *args):
        """Filter VM list based on search and filter criteria"""
        search_term = self.vm_search_entry.get().strip().lower()
        filter_type = self.vm_filter_combo.get()
        
        # Clear current list
        for widget in self.vm_list_inner.winfo_children():
            widget.destroy()
        
        if not self.vms:
            return
        
        # Filter VMs
        filtered_vms = self.vms
        
        if search_term:
            filtered_vms = [vm for vm in filtered_vms if search_term in vm.name.lower()]
        
        # FIX: Check if filter_type is "All VMs" or empty/None
        if filter_type and filter_type != "All VMs":
            state_map = {
                "Running": "Running",
                "Stopped": "Stopped",
                "Paused": "Paused",
                "Error": "Error"
            }
            target_state = state_map.get(filter_type, "")
            if target_state:  # Only filter if we have a valid state
                filtered_vms = [vm for vm in filtered_vms if vm.state == target_state]
        
        if not filtered_vms:
            # Show no results
            no_results = ctk.CTkFrame(self.vm_list_inner, fg_color="transparent")
            no_results.pack(fill="both", expand=True, pady=100)
            
            ctk.CTkLabel(
                no_results,
                text="üîç",
                font=("Segoe UI", 48),
                text_color="#D1D5DB"
            ).pack(pady=(0, 20))
            
            ctk.CTkLabel(
                no_results,
                text="No VMs Found",
                font=("Segoe UI", 16, "bold"),
                text_color="#6B7280"
            ).pack(pady=(0, 10))
            
            ctk.CTkLabel(
                no_results,
                text="Try adjusting your search or filter",
                font=("Segoe UI", 14),
                text_color="#9CA3AF"
            ).pack()
            return
        
        # Display filtered VMs
        for vm in filtered_vms:
            self._create_vm_card(vm)


    def _open_vm_terminal(self, vm: VirtualMachine):
        """Open terminal for specific VM"""
        # First ensure we're in the VMs view
        self._show_vms()
        
        # Switch to terminal tab
        self.vm_notebook.set("üíª SSH Terminal")
        
        # Update terminal VM combo
        if hasattr(self, 'terminal_vm_combo'):
            current_values = self.terminal_vm_combo.cget("values")
            if vm.name not in current_values:
                self.terminal_vm_combo.configure(values=list(current_values) + [vm.name])
            self.terminal_vm_combo.set(vm.name)
        
        # Ensure terminal widget exists
        if not hasattr(self, 'terminal_widget') or self.terminal_widget is None:
            # Try to find and initialize terminal widget
            try:
                # Look for terminal widget in the terminal tab
                for widget in self.vm_terminal_tab.winfo_children():
                    if isinstance(widget, TerminalWidget):
                        self.terminal_widget = widget
                        break
                    elif hasattr(widget, 'winfo_children'):
                        for child in widget.winfo_children():
                            if isinstance(child, TerminalWidget):
                                self.terminal_widget = child
                                break
            except Exception as e:
                logger.error(f"Error finding terminal widget: {e}")
        
        # If still no terminal widget, try to connect
        if hasattr(self, 'terminal_widget') and self.terminal_widget is not None:
            try:
                self.terminal_widget.set_vm_id(vm.id)
                self.terminal_widget.set_vm_name(vm.name)
                self.terminal_widget.set_vm_ip(vm.ip_address)
                
                # Load credentials
                from localvm.credentials_manager import CredentialsManager
                credentials_manager = CredentialsManager()
                credentials = credentials_manager.get_credentials(vm.id)
                
                if credentials:
                    self.terminal_widget.set_credentials(
                        username=credentials.get('username'),
                        password=credentials.get('password'),
                        ssh_port=credentials.get('ssh_port', 22)
                    )
                
                # Try to connect
                success, message = self.terminal_widget.connect()
                
                if hasattr(self, 'terminal_status_label'):
                    if success:
                        self.terminal_status_label.configure(
                            text=f"Connected to {vm.name}",
                            text_color="#10B981"
                        )
                    else:
                        self.terminal_status_label.configure(
                            text=f"Connection failed: {message}",
                            text_color="#EF4444"
                        )
                        
            except Exception as e:
                logger.error(f"Error in open_vm_terminal: {e}")
                if hasattr(self, 'terminal_status_label'):
                    self.terminal_status_label.configure(
                        text=f"Error: {str(e)[:50]}...",
                        text_color="#EF4444"
                    )
        else:
            # Terminal widget not found, ask user to reinitialize
            if hasattr(self, 'terminal_status_label'):
                self.terminal_status_label.configure(
                    text="Terminal not available. Click 'Reinitialize Terminal'",
                    text_color="#EF4444"
                )
    
    def _on_terminal_vm_selected(self, choice):
        """Handle VM selection in terminal tab"""
        # Find VM by name
        for vm in self.vms:
            if vm.name == choice:
                self.terminal_widget.set_vm_id(vm.id)
                break
    
    def _refresh_terminal_vms(self):
        """Refresh VM list in terminal tab"""
        try:
            # Check if terminal widget exists
            if not hasattr(self, 'terminal_vm_combo') or not hasattr(self, 'vms'):
                return
                
            # Get VM names from the current VM list
            vm_names = [vm.name for vm in self.vms]
            
            # Update the combo box values
            self.terminal_vm_combo.configure(values=vm_names)
            
            if vm_names:
                # Set default selection if none selected
                current_selection = self.terminal_vm_combo.get()
                if not current_selection or current_selection not in vm_names:
                    self.terminal_vm_combo.set(vm_names[0])
                    # Trigger selection event
                    self._on_terminal_vm_selected(vm_names[0])
            else:
                # Clear selection if no VMs
                self.terminal_vm_combo.set("")
                if hasattr(self, 'terminal_status_label'):
                    self.terminal_status_label.configure(
                        text="No VMs available. Create a VM first.",
                        text_color="#EF4444"
                    )
                # Clear terminal
                if hasattr(self, 'terminal_widget'):
                    self.terminal_widget.clear_terminal()
                    
        except Exception as e:
            logger.error(f"Error refreshing terminal VMs: {e}")
    
    def _connect_terminal(self):
        """Connect terminal to selected VM"""
        vm_name = self.terminal_vm_combo.get()
        if not vm_name:
            if hasattr(self, 'terminal_status_label'):
                self.terminal_status_label.configure(
                    text="Please select a VM first",
                    text_color="#EF4444"
                )
            return
        
        # Find the VM
        vm = None
        for v in self.vms:
            if v.name == vm_name:
                vm = v
                break
        
        if not vm:
            if hasattr(self, 'terminal_status_label'):
                self.terminal_status_label.configure(
                    text=f"VM '{vm_name}' not found",
                    text_color="#EF4444"
                )
            return
        
        # Check if terminal widget exists and is properly initialized
        if not hasattr(self, 'terminal_widget'):
            # Try to initialize terminal widget
            try:
                from localvm.gui.terminal_widget import TerminalWidget
                # Find the container
                for widget in self.vm_terminal_tab.winfo_children():
                    if isinstance(widget, ctk.CTkFrame) and len(widget.winfo_children()) > 0:
                        # Create terminal widget
                        self.terminal_widget = TerminalWidget(widget, is_admin=True)
                        break
            except Exception as e:
                logger.error(f"Failed to create terminal widget: {e}")
                self.terminal_widget = self._create_safe_terminal_widget()
        
        # Ensure terminal_widget is not None
        if self.terminal_widget is None:
            logger.error("terminal_widget is None, creating safe version")
            self.terminal_widget = self._create_safe_terminal_widget()
        
        try:
            # Set VM info
            self.terminal_widget.set_vm_id(vm.id)
            self.terminal_widget.set_vm_name(vm.name)
            self.terminal_widget.set_vm_ip(vm.ip_address)
            
            # Load credentials
            from localvm.credentials_manager import CredentialsManager
            credentials_manager = CredentialsManager()
            credentials = credentials_manager.get_credentials(vm.id)
            
            if credentials:
                self.terminal_widget.set_credentials(
                    username=credentials.get('username'),
                    password=credentials.get('password'),
                    ssh_port=credentials.get('ssh_port', 22)
                )
            
            # Try to connect
            success, message = self.terminal_widget.connect()
            
            if hasattr(self, 'terminal_status_label'):
                if success:
                    self.terminal_status_label.configure(
                        text=f"Connected to {vm.name}",
                        text_color="#10B981"
                    )
                else:
                    self.terminal_status_label.configure(
                        text=f"Connection failed: {message}",
                        text_color="#EF4444"
                    )
                    
        except AttributeError as e:
            logger.error(f"Terminal widget missing method: {e}")
            if hasattr(self, 'terminal_status_label'):
                self.terminal_status_label.configure(
                    text="Terminal widget error - missing method",
                    text_color="#EF4444"
                )
            # Recreate terminal widget
            self._reinitialize_terminal()
            
        except Exception as e:
            logger.error(f"Error connecting terminal: {e}")
            if hasattr(self, 'terminal_status_label'):
                self.terminal_status_label.configure(
                    text=f"Connection error: {str(e)[:50]}...",
                    text_color="#EF4444"
                )
    
    def _copy_to_clipboard(self, text):
        """Copy text to clipboard"""
        try:
            self.clipboard_clear()
            self.clipboard_append(text)
            # Show toast notification
            self._show_toast("Copied to clipboard!")
        except Exception as e:
            logger.error(f"Failed to copy to clipboard: {e}")
    
    def _show_toast(self, message, duration=2000):
        """Show a temporary toast notification"""
        try:
            # Create toast window
            toast = ctk.CTkToplevel(self)
            toast.overrideredirect(True)
            toast.attributes("-topmost", True)
            toast.configure(fg_color="#333333", bg_color="#333333")
            
            # Set size and position
            toast_width = 300
            toast_height = 60
            toast.geometry(f"{toast_width}x{toast_height}")
            
            # Position at bottom right
            x = self.winfo_x() + self.winfo_width() - toast_width - 20
            y = self.winfo_y() + self.winfo_height() - toast_height - 20
            toast.geometry(f"+{x}+{y}")
            
            # Toast content
            ctk.CTkLabel(
                toast,
                text=message,
                font=("Segoe UI", 12),
                text_color="white",
                wraplength=250
            ).pack(expand=True, fill="both", padx=20, pady=10)
            
            # Auto-close after duration
            toast.after(duration, toast.destroy)
            
        except Exception as e:
            logger.error(f"Error showing toast: {e}")
    
    def _start_all_vms(self):
        """Start all stopped VMs"""
        stopped_vms = [vm for vm in self.vms if vm.state != "Running"]
        if not stopped_vms:
            self._show_toast("All VMs are already running!")
            return
        
        for vm in stopped_vms:
            self._start_vm(vm.id)
    
    def _stop_all_vms(self):
        """Stop all running VMs"""
        running_vms = [vm for vm in self.vms if vm.state == "Running"]
        if not running_vms:
            self._show_toast("No running VMs found!")
            return
        
        for vm in running_vms:
            self._stop_vm(vm.id)
    
    def _show_vm_performance(self, vm_id):
        """Show VM performance metrics"""
        # This would show performance charts
        # For now, show a message
        self._show_toast("Performance metrics coming soon!")
    
    def _take_vm_snapshot(self, vm_id):
        """Take VM snapshot"""
        # This would open snapshot dialog
        # For now, show a message
        self._show_toast("Snapshot feature coming soon!")
    
    def _show_vm_logs(self, vm_id):
        """Show VM logs"""
        self.vm_notebook.set("üìã Logs")
        self._show_toast("VM logs loaded")
    
    def _refresh_terminal_vms(self):
        """Refresh VM list in terminal tab"""
        # Get VM names from the current VM list
        vm_names = [vm.name for vm in self.vms]
        
        # Update the combo box values
        self.terminal_vm_combo.configure(values=vm_names)
        
        if vm_names:
            # Set default selection if none selected
            current_selection = self.terminal_vm_combo.get()
            if not current_selection or current_selection not in vm_names:
                self.terminal_vm_combo.set(vm_names[0])
                # Trigger selection event
                self._on_terminal_vm_selected(vm_names[0])
        else:
            # Clear selection if no VMs
            self.terminal_vm_combo.set("")
            self.terminal_status_label.configure(
                text="No VMs available. Create a VM first.",
                text_color="#EF4444"
            )
            # Clear terminal
            if hasattr(self, 'terminal_widget'):
                self.terminal_widget.clear_terminal()
    
    def _on_terminal_vm_selected(self, choice):
        """Handle VM selection in terminal tab"""
        if not choice:
            return
            
        # Find VM by name
        selected_vm = None
        for vm in self.vms:
            if vm.name == choice:
                selected_vm = vm
                break
        
        if selected_vm and hasattr(self, 'terminal_widget'):
            # Update terminal widget
            self.terminal_widget.set_vm_id(selected_vm.id)
            self.terminal_widget.set_vm_name(selected_vm.name)
            self.terminal_widget.set_vm_ip(selected_vm.ip_address)
            
            # Update status
            self.terminal_status_label.configure(
                text=f"Selected: {selected_vm.name} ({selected_vm.ip_address or 'No IP'})",
                text_color="#10B981"
            )
            
            # Load credentials if available
            self._load_vm_credentials_for_terminal(selected_vm.id)
        else:
            self.terminal_status_label.configure(
                text=f"VM '{choice}' not found or terminal not initialized",
                text_color="#EF4444"
            )
    
    def _load_vm_credentials(self):
        """Load VM credentials"""
        if not self.vm_id:
            return
        
        try:
            credentials = self.credentials_manager.get_credentials(self.vm_id)
            if credentials:
                # Update credentials
                self.username = credentials.get('username')
                self.password = credentials.get('password')
                self.ssh_port = credentials.get('ssh_port', 22)
                
                # Get VM info for display
                from ..database import DatabaseManager
                db = DatabaseManager()
                vm_info = db.execute_query(
                    "SELECT name, ip_address FROM virtual_machines WHERE id = ?", 
                    (self.vm_id,)
                )
                
                if vm_info:
                    self.vm_name = vm_info[0][0]
                    self.vm_ip = vm_info[0][1]
                    
                    # Update connection info display
                    self.connection_info.configure(
                        text=f"{self.vm_name} | {self.username}@{self.vm_ip or 'No IP'}:{self.ssh_port}"
                    )
                    
                    # Store connection details
                    self.connection_details = {
                        'ip_address': self.vm_ip,
                        'username': self.username,
                        'password': self.password,
                        'ssh_port': self.ssh_port
                    }
                    
                    # Enable connect button if we have IP
                    if self.vm_ip:
                        self.connect_btn.configure(state="normal")
                        self._print_output(f"‚úì Credentials loaded for VM: {self.vm_name}\n", "success")
                        self._print_output(f"IP Address: {self.vm_ip}\n", "info")
                        self._print_output(f"Username: {self.username}\n", "info")
                        self._print_output(f"Port: {self.ssh_port}\n", "info")
                    else:
                        self._print_output("‚ö† Warning: VM IP address not configured\n", "warning")
                        self._print_output("Please configure the VM IP address before connecting\n", "info")
                else:
                    self._print_output(f"‚ö† VM with ID {self.vm_id} not found\n", "warning")
            else:
                # No credentials found
                self._print_output("‚ö† No SSH credentials found for this VM\n", "warning")
                self._print_output("You can add credentials in the VM settings\n", "info")
                self._print_output("Or click 'Add Credentials' button below\n", "info")
                
                # Add a button to add credentials
                self._add_credentials_button()
                
        except Exception as e:
            self._print_output(f"Error loading credentials: {str(e)}\n", "error")
    
    def _add_credentials_button(self):
        """Add button to create credentials"""
        if hasattr(self, 'add_cred_btn') and self.add_cred_btn:
            return
            
        # Add button to header
        header = self.winfo_children()[0]  # Get the header frame
        button_frame = header.winfo_children()[3]  # Get the button frame
        
        self.add_cred_btn = ModernButton(
            button_frame,
            text="+ Add Credentials",
            command=self._open_credentials_dialog,
            width=120,
            height=30,
            fg_color="#10B981",
            hover_color="#059669"
        )
        self.add_cred_btn.pack(side="left", padx=5)
    
    def _open_credentials_dialog(self):
        """Open dialog to add credentials"""
        try:
            from ..gui.vm_dialog import VMDialog
            from ..database import DatabaseManager
            
            db = DatabaseManager()
            vm_info = db.execute_query(
                "SELECT name, ip_address FROM virtual_machines WHERE id = ?", 
                (self.vm_id,)
            )
            
            if vm_info:
                vm_name = vm_info[0][0]
                
                # Create a simple dialog for credentials
                dialog = ctk.CTkToplevel(self)
                dialog.title(f"Add SSH Credentials for {vm_name}")
                dialog.geometry("400x300")
                dialog.transient(self)
                dialog.grab_set()
                
                # Center dialog
                dialog.update_idletasks()
                x = self.winfo_x() + self.winfo_width() // 2 - 200
                y = self.winfo_y() + self.winfo_height() // 2 - 150
                dialog.geometry(f"+{x}+{y}")
                
                # Dialog content
                container = ctk.CTkFrame(dialog)
                container.pack(fill="both", expand=True, padx=20, pady=20)
                
                ctk.CTkLabel(
                    container,
                    text=f"Add SSH Credentials for {vm_name}",
                    font=("Segoe UI", 16, "bold")
                ).pack(pady=(0, 20))
                
                # Username
                ctk.CTkLabel(container, text="Username:", font=("Segoe UI", 12)).pack(anchor="w")
                username_entry = ctk.CTkEntry(container, width=300)
                username_entry.pack(fill="x", pady=(0, 15))
                username_entry.insert(0, "root")
                
                # Password
                ctk.CTkLabel(container, text="Password:", font=("Segoe UI", 12)).pack(anchor="w")
                password_entry = ctk.CTkEntry(container, width=300, show="*")
                password_entry.pack(fill="x", pady=(0, 15))
                
                # Generate password button
                def generate_password():
                    password = self.credentials_manager.generate_secure_password()
                    password_entry.delete(0, "end")
                    password_entry.insert(0, password)
                
                ModernButton(
                    container,
                    text="Generate Secure Password",
                    command=generate_password,
                    width=200
                ).pack(pady=(0, 20))
                
                # SSH Port
                ctk.CTkLabel(container, text="SSH Port:", font=("Segoe UI", 12)).pack(anchor="w")
                port_entry = ctk.CTkEntry(container, width=100)
                port_entry.pack(anchor="w", pady=(0, 20))
                port_entry.insert(0, "22")
                
                # Buttons
                button_frame = ctk.CTkFrame(container, fg_color="transparent")
                button_frame.pack(fill="x", pady=(10, 0))
                
                def save_credentials():
                    username = username_entry.get().strip() or "root"
                    password = password_entry.get().strip()
                    port = int(port_entry.get().strip() or "22")
                    
                    if not password:
                        messagebox.showwarning("Warning", "Please enter a password")
                        return
                    
                    # Save credentials
                    success = self.credentials_manager.save_credentials(
                        vm_id=self.vm_id,
                        username=username,
                        password=password,
                        ssh_port=port
                    )
                    
                    if success:
                        self._print_output(f"‚úì Credentials saved for user '{username}'\n", "success")
                        self._load_vm_credentials()  # Reload credentials
                        if hasattr(self, 'add_cred_btn'):
                            self.add_cred_btn.destroy()
                            self.add_cred_btn = None
                        dialog.destroy()
                    else:
                        messagebox.showerror("Error", "Failed to save credentials")
                
                ModernButton(
                    button_frame,
                    text="Save",
                    command=save_credentials,
                    width=100,
                    fg_color="#10B981"
                ).pack(side="right", padx=(0, 10))
                
                ModernButton(
                    button_frame,
                    text="Cancel",
                    command=dialog.destroy,
                    width=100
                ).pack(side="right")
                
        except Exception as e:
            logger.error(f"Error opening credentials dialog: {e}")
            messagebox.showerror("Error", f"Failed to open credentials dialog: {str(e)}")
    
    def _add_credentials_button(self):
        """Add button to create credentials"""
        if hasattr(self, 'add_cred_btn') and self.add_cred_btn:
            return
            
        # Add button to header
        header = self.winfo_children()[0]  # Get the header frame
        button_frame = header.winfo_children()[3]  # Get the button frame
        
        self.add_cred_btn = ModernButton(
            button_frame,
            text="+ Add Credentials",
            command=self._open_credentials_dialog,
            width=120,
            height=30,
            fg_color="#10B981",
            hover_color="#059669"
        )
        self.add_cred_btn.pack(side="left", padx=5)
    
