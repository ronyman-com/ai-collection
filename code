    def open_network_manager(self):
        """Open Network Manager dialog"""
        try:
            from localvm.network_manager import AdvancedNetworkManager
            # Initialize network manager if not already
            if not hasattr(self, '_network_manager') or self._network_manager is None:
                self._network_manager = AdvancedNetworkManager()
            
            # Create and show dialog
            from localvm.gui.network_manager_dialog import NetworkManagerDialog
            dialog = NetworkManagerDialog(self, self._network_manager)
            dialog.grab_set()
        except ImportError as e:
            messagebox.showerror("Error", 
                f"Network Manager module not found. Please install dependencies:\n"
                f"pip install psutil netifaces")
        except Exception as e:
            messagebox.showerror("Error", f"Failed to open Network Manager: {str(e)}")
    
    def open_database_manager(self):
        """Open Database Manager dialog"""
        try:
            # Try to import psutil first
            try:
                import psutil
            except ImportError:
                # Offer to install psutil
                response = messagebox.askyesno(
                    "Missing Dependency",
                    "The psutil package is required for database monitoring.\n\n"
                    "Would you like to install it now?",
                    parent=self
                )
                
                if response:
                    try:
                        import subprocess
                        import sys
                        subprocess.check_call([
                            sys.executable, "-m", "pip", "install", "psutil"
                        ])
                        messagebox.showinfo(
                            "Success",
                            "psutil installed successfully. Please restart the application.",
                            parent=self
                        )
                        return
                    except Exception as e:
                        messagebox.showerror(
                            "Installation Failed",
                            f"Failed to install psutil:\n\n{str(e)}",
                            parent=self
                        )
                        return
                else:
                    # User chose not to install, continue without psutil
                    pass
            
            # Try to import the correct class from database_manager
            try:
                # First try to import LocalDatabaseManager
                from localvm.database_manager import LocalDatabaseManager
                db_manager_class = LocalDatabaseManager
            except ImportError:
                # If LocalDatabaseManager doesn't exist, try DatabaseManager
                try:
                    from localvm.database_manager import DatabaseManager
                    db_manager_class = DatabaseManager
                except ImportError as e:
                    messagebox.showerror(
                        "Import Error",
                        f"Cannot find database manager class in database_manager.py\n\n"
                        f"Error: {str(e)}",
                        parent=self
                    )
                    return
            
            # Initialize database manager if not already
            if not hasattr(self, '_advanced_db_manager') or self._advanced_db_manager is None:
                self._advanced_db_manager = db_manager_class()
            
            # Create and show dialog
            from localvm.gui.database_manager_dialog import DatabaseManagerDialog
            dialog = DatabaseManagerDialog(self, self._advanced_db_manager)
            dialog.grab_set()
            
        except Exception as e:
            messagebox.showerror("Error", f"Failed to open Database Manager: {str(e)}")
    
