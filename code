    def open_system_dashboard(self):
        """Open System Dashboard dialog"""
        try:
            from localvm.gui.dashboard_dialog import SystemDashboardDialog
            
            # Get all managers
            managers = {
                'vm_manager': self.vm_manager,
                'ngfw': self.ngfw,
                'db': self.db
            }
            
            # Add advanced managers if available
            if hasattr(self, '_network_manager'):
                managers['network_manager'] = self._network_manager
            if hasattr(self, '_advanced_db_manager'):
                managers['db_manager'] = self._advanced_db_manager
            if hasattr(self, '_api_manager'):
                managers['api_manager'] = self._api_manager
            
            dialog = SystemDashboardDialog(self, managers)
            dialog.grab_set()
        except Exception as e:
            messagebox.showerror("Error", f"Failed to open System Dashboard: {str(e)}")
    
    # ========== EXISTING METHODS (updated) ==========
    
    def _load_vms(self):
        """Load VMs from database"""
        try:
            from models.vm_model import VirtualMachine
            from localvm.database import DatabaseManager
            
            db = DatabaseManager()
            results = db.execute_query("""
                SELECT id, name, description, hypervisor, os_type, 
                       cpu_cores, memory_mb, disk_gb, ip_address, state,
                       last_started, created_at, updated_at, mac_address,
                       network_type, ssh_port
                FROM virtual_machines 
                ORDER BY name
            """)
            
            self.vms = []
            for row in results:
                vm = VirtualMachine.from_tuple(row)
                self.vms.append(vm)
                
        except Exception as e:
            logger.error(f"Error loading VMs: {e}")
            self.vms = []
    
    def _add_vm(self):
        """Open add VM dialog"""
        def save_callback(vm: VirtualMachine, credentials_settings: Dict):
            # Use VM manager to create VM with credentials
            success, message, vm_id = self.vm_manager.create_vm_with_credentials(
                vm_config=vm.to_dict(),
                credentials_settings=credentials_settings
            )
            
            if success:
                messagebox.showinfo("Success", f"VM '{vm.name}' added successfully!\n{message}")
                self._load_vms()
                self._refresh_terminal_vms()
                self._show_vms()
            else:
                messagebox.showerror("Error", f"Failed to add VM: {message}")
        
        dialog = VMDialog(self, "Add New Virtual Machine", callback=save_callback)
    
    def _show_about(self):
        """Show about dialog"""
        try:
            from .about_dialog import AboutDialog
            dialog = AboutDialog(self, self.config)
        except ImportError as e:
            messagebox.showerror("Error", f"Cannot load about dialog: {str(e)}")
    
    def _show_logs(self):
        """Show logs viewer"""
        self._clear_content()
        self.welcome_label.configure(text="Application Logs")
        
        # Create log viewer widget
        try:
            from .log_viewer import LogViewerWidget
            
            # Get log file path from config
            log_file = self.config.log_file
            
            if Path(log_file).exists():
                self.log_viewer = LogViewerWidget(self.content_frame, log_file)
                self.log_viewer.pack(fill="both", expand=True, padx=10, pady=10)
            else:
                # Show message if no log file
                error_frame = ctk.CTkFrame(self.content_frame)
                error_frame.pack(expand=True)
                
                ctk.CTkLabel(
                    error_frame,
                    text="üìã Log Viewer",
                    font=("Segoe UI", 24, "bold")
                ).pack(pady=20)
                
                ctk.CTkLabel(
                    error_frame,
                    text="Log file not found",
                    font=("Segoe UI", 16),
                    text_color="gray"
                ).pack(pady=10)
                
                ctk.CTkLabel(
                    error_frame,
                    text=f"Expected log file: {log_file}",
                    font=("Consolas", 11),
                    text_color="orange"
                ).pack(pady=10)
                
                # Create log file button
                ModernButton(
                    error_frame,
                    text="Create Log File",
                    command=self._create_log_file,
                    width=150
                ).pack(pady=20)
                
        except ImportError as e:
            # Log viewer not available
            error_frame = ctk.CTkFrame(self.content_frame)
            error_frame.pack(expand=True)
            
            ctk.CTkLabel(
                error_frame,
                text="‚ö†Ô∏è Log Viewer Error",
                font=("Segoe UI", 20, "bold"),
                text_color="orange"
            ).pack(pady=20)
            
            ctk.CTkLabel(
                error_frame,
                text=f"Error loading log viewer: {str(e)}",
                font=("Consolas", 11),
                text_color="red"
            ).pack(pady=10)
    
    def _create_log_file(self):
        """Create log file if it doesn't exist"""
        try:
            log_path = Path(self.config.log_file)
            log_path.parent.mkdir(parents=True, exist_ok=True)
            
            # Create empty log file
            log_path.touch()
            
            # Add initial log entry
            with open(log_path, 'a', encoding='utf-8') as f:
                f.write(f"{datetime.now().isoformat()} - INFO - Log file created by user\n")
            
            # Show success message and refresh
            messagebox.showinfo("Success", "Log file created successfully")
            self._show_logs()  # Refresh the view
            
        except Exception as e:
            messagebox.showerror("Error", f"Failed to create log file: {str(e)}")
    
    def _show_dashboard(self):
        """Show dashboard with VM overview and stats"""
        self._clear_content()
        self.welcome_label.configure(text="Dashboard")
        
        # Main container
        main_container = ctk.CTkFrame(self.content_frame, fg_color="transparent")
        main_container.pack(fill="both", expand=True, padx=20, pady=20)
        
        # Stats overview
        stats_frame = ctk.CTkFrame(main_container, fg_color="transparent")
        stats_frame.pack(fill="x", pady=(0, 20))
        
        # Calculate stats
        total_vms = len(self.vms)
        running_vms = len([vm for vm in self.vms if vm.state == "Running"])
        stopped_vms = len([vm for vm in self.vms if vm.state == "Stopped"])
        total_cpu = sum(vm.cpu_cores for vm in self.vms)
        total_memory = sum(vm.memory_gb for vm in self.vms)
        
        stats = [
            ("Total VMs", str(total_vms), "#3B82F6"),
            ("Running", str(running_vms), "#10B981"),
            ("Stopped", str(stopped_vms), "#EF4444"),
            ("Resources", f"{total_cpu} CPU / {total_memory:.0f}GB", "#8B5CF6")
        ]
        
        for i, (label, value, color) in enumerate(stats):
            card = ctk.CTkFrame(
                stats_frame,
                width=180,
                height=80,
                corner_radius=12,
                border_width=1,
                border_color="#E5E7EB"
            )
            card.grid(row=0, column=i, padx=(0, 15))
            
            ctk.CTkLabel(
                card,
                text=label,
                font=("Segoe UI", 11),
                text_color="#6B7280"
            ).place(x=15, y=15)
            
            ctk.CTkLabel(
                card,
                text=value,
                font=("Segoe UI", 24, "bold"),
                text_color=color
            ).place(x=15, y=35)
        
        # Recent VMs section
        recent_frame = ctk.CTkFrame(main_container, fg_color="transparent")
        recent_frame.pack(fill="both", expand=True)
        
        # Section header
        header = ctk.CTkFrame(recent_frame, fg_color="transparent")
        header.pack(fill="x", pady=(0, 15))
        
        ctk.CTkLabel(
            header,
            text="Recent Virtual Machines",
            font=("Segoe UI", 18, "bold")
        ).pack(side="left")
        
        ModernButton(
            header,
            text="View All VMs",
            command=self._show_vms,
            width=100,
            height=35,
            font=("Segoe UI", 11)
        ).pack(side="right")
        
        # Scrollable frame for VMs
        vm_scroll = ctk.CTkScrollableFrame(
            recent_frame,
            fg_color="transparent",
            scrollbar_button_color="#3B82F6",
            scrollbar_button_hover_color="#2563EB"
        )
        vm_scroll.pack(fill="both", expand=True)
        
        if not self.vms:
            # Empty state
            empty_frame = ctk.CTkFrame(vm_scroll, fg_color="transparent")
            empty_frame.pack(fill="both", expand=True, pady=50)
            
            ctk.CTkLabel(
                empty_frame,
                text="üìÅ",
                font=("Segoe UI", 64),
                text_color="#D1D5DB"
            ).pack(pady=(0, 20))
            
            ctk.CTkLabel(
                empty_frame,
                text="No Virtual Machines",
                font=("Segoe UI", 18, "bold"),
                text_color="#6B7280"
            ).pack(pady=(0, 10))
            
            ctk.CTkLabel(
                empty_frame,
                text="Create your first VM to get started",
                font=("Segoe UI", 14),
                text_color="#9CA3AF"
            ).pack(pady=(0, 30))
            
            ModernButton(
                empty_frame,
                text="+ Create Your First VM",
                command=self._add_vm,
                width=200,
                height=50,
                font=("Segoe UI", 14, "bold"),
                fg_color="#3B82F6",
                hover_color="#2563EB"
            ).pack()
        else:
            # Show VMs (limit to 10 for dashboard)
            recent_vms = self.vms[:10]  # Show most recent 10 VMs
            for vm in recent_vms:
                # Use the new method
                self._create_vm_card_for_dashboard(vm_scroll, vm)
        
        # Quick actions section
        actions_frame = ctk.CTkFrame(main_container, fg_color="transparent")
        actions_frame.pack(fill="x", pady=(20, 0))
        
        ctk.CTkLabel(
            actions_frame,
            text="Quick Actions",
            font=("Segoe UI", 18, "bold")
        ).pack(anchor="w", pady=(0, 15))
        
        quick_actions = ctk.CTkFrame(actions_frame, fg_color="transparent")
        quick_actions.pack(fill="x")
        
        actions = [
            ("+ Create VM", self._add_vm, "#3B82F6"),
            ("üìã Clone VM", lambda: self._show_toast("Select a VM to clone"), "#8B5CF6"),
            ("üíæ Export", lambda: self._show_toast("Select a VM to export"), "#10B981"),
            ("üìä Performance", lambda: self._show_toast("Performance monitoring"), "#F59E0B"),
            ("üîß Settings", self._show_settings, "#6B7280"),
            ("üìñ Help", self._show_help, "#EC4899")
        ]
        
        for i, (text, command, color) in enumerate(actions):
            ModernButton(
                quick_actions,
                text=text,
                command=command,
                width=150,
                height=45,
                font=("Segoe UI", 12),
                fg_color=color,
                hover_color=self._darken_color(color)
            ).grid(row=0, column=i, padx=5)
        
        # Configure grid columns
        for i in range(len(actions)):
            quick_actions.grid_columnconfigure(i, weight=1)
    
    def _darken_color(self, hex_color: str, factor: float = 0.8) -> str:
        """Darken a hex color by a factor"""
        hex_color = hex_color.lstrip('#')
        rgb = tuple(int(hex_color[i:i+2], 16) for i in (0, 2, 4))
        darker = tuple(int(c * factor) for c in rgb)
        return f'#{darker[0]:02x}{darker[1]:02x}{darker[2]:02x}'
    
    ###################### update show vm to modern
    
    def _show_vms(self):
        """Show all VMs view with terminal integration - Modern Design"""
        self._clear_content()
        self.welcome_label.configure(text="Virtual Machines")
        
        # Main container with modern layout
        main_container = ctk.CTkFrame(self.content_frame, fg_color="transparent")
        main_container.pack(fill="both", expand=True, padx=20, pady=20)
        
        # Header with stats and actions
        header_frame = ctk.CTkFrame(main_container, fg_color="transparent")
        header_frame.pack(fill="x", pady=(0, 20))
        
        # Stats cards
        stats_frame = ctk.CTkFrame(header_frame, fg_color="transparent")
        stats_frame.pack(side="left")
        
        # Calculate stats
        total_vms = len(self.vms)
        running_vms = len([vm for vm in self.vms if vm.state == "Running"])
        stopped_vms = len([vm for vm in self.vms if vm.state == "Stopped"])
        
        stats = [
            ("Total VMs", str(total_vms), "#3B82F6"),
            ("Running", str(running_vms), "#10B981"),
            ("Stopped", str(stopped_vms), "#EF4444"),
            ("Resources", f"{sum(vm.cpu_cores for vm in self.vms)} CPU / {sum(vm.memory_gb for vm in self.vms):.0f}GB", "#8B5CF6")
        ]
        
        for i, (label, value, color) in enumerate(stats):
            card = ctk.CTkFrame(
                stats_frame,
                width=180,
                height=80,
                corner_radius=12,
                border_width=1,
                border_color="#E5E7EB"
            )
            card.grid(row=0, column=i, padx=(0, 15))
            
            ctk.CTkLabel(
                card,
                text=label,
                font=("Segoe UI", 11),
                text_color="#6B7280"
            ).place(x=15, y=15)
            
            ctk.CTkLabel(
                card,
                text=value,
                font=("Segoe UI", 24, "bold"),
                text_color=color
            ).place(x=15, y=35)
        
        # Action buttons
        action_frame = ctk.CTkFrame(header_frame, fg_color="transparent")
        action_frame.pack(side="right")
        
        ModernButton(
            action_frame,
            text="+ Create VM",
            command=self._add_vm,
            width=120,
            height=40,
            font=("Segoe UI", 12, "bold"),
            fg_color="#3B82F6",
            hover_color="#2563EB"
        ).pack(side="left", padx=(0, 10))
        
        # CHANGE: Use _refresh_vm_view instead of _refresh_vms
        ModernButton(
            action_frame,
            text="‚Üª Refresh",
            command=self._refresh_vm_view,  # Changed from _refresh_vms to _refresh_vm_view
            width=100,
            height=40,
            fg_color="#6B7280",
            hover_color="#4B5563"
        ).pack(side="left")
        
        # Create a modern notebook for VM management
        self.vm_notebook = ctk.CTkTabview(
            main_container,
            segmented_button_selected_color="#3B82F6",
            segmented_button_selected_hover_color="#2563EB",
            segmented_button_unselected_color="#F3F4F6",
            segmented_button_unselected_hover_color="#E5E7EB"
        )
        self.vm_notebook.pack(fill="both", expand=True)
        
        # Add tabs with modern icons
        self.vm_list_tab = self.vm_notebook.add("üìã VM List")
        self.vm_terminal_tab = self.vm_notebook.add("üíª SSH Terminal")
        self.vm_details_tab = self.vm_notebook.add("üìä VM Details")
        self.log_viewer_tab = self.vm_notebook.add("üìã Logs")
        
        # Setup each tab with modern design
        self._setup_vm_list_tab_modern()
        self._setup_vm_terminal_tab_modern()
        self._setup_vm_details_tab()
        self._setup_log_viewer_tab()
        
        # Load VMs
        self._load_vms_to_list_modern()
        self._refresh_terminal_vms()
    
    # ADD THIS NEW METHOD
    def _refresh_vm_view(self):
        """Refresh the entire VM view"""
        # Reload VMs from database
        self._load_vms()
        
        # Refresh all components
        if hasattr(self, 'vm_notebook'):
            # Refresh VM list tab
            if hasattr(self, '_load_vms_to_list_modern'):
                self._load_vms_to_list_modern()
            
            # Refresh terminal VM list
            if hasattr(self, '_refresh_terminal_vms'):
                self._refresh_terminal_vms()
            
            # Refresh stats if we're showing VMs
            self._update_vm_stats()
            
            # Show toast notification
            self._show_toast("VM list refreshed!")
        else:
            # If notebook doesn't exist yet, show VMs view
            self._show_vms()
    
    def _update_vm_stats(self):
        """Update VM statistics in the header"""
        if not hasattr(self, 'vm_notebook'):
            return
            
        # This method would update the stats cards if needed
        # For now, we'll just reload the entire view
        pass
    
    def _setup_vm_list_tab_modern(self):
        """Setup VM list tab with modern design"""
        container = self.vm_list_tab
        
        # Modern toolbar
        toolbar = ctk.CTkFrame(container, fg_color="#F9FAFB", height=60, corner_radius=8)
        toolbar.pack(fill="x", pady=(0, 15))
        
        # Left side: Search and filter
        left_toolbar = ctk.CTkFrame(toolbar, fg_color="transparent")
        left_toolbar.pack(side="left", padx=20)
        
        # Search with icon
        search_container = ctk.CTkFrame(left_toolbar, fg_color="transparent")
        search_container.pack(side="left", padx=(0, 20))
        
        ctk.CTkLabel(
            search_container,
            text="üîç",
            font=("Segoe UI", 14)
        ).pack(side="left", padx=(0, 5))
        
        self.vm_search_entry = ctk.CTkEntry(
            search_container,
            width=250,
            placeholder_text="Search VM by name...",
            font=("Segoe UI", 12),
            border_width=1,
            border_color="#D1D5DB",
            corner_radius=20
        )
        self.vm_search_entry.pack(side="left")
        self.vm_search_entry.bind("<Return>", lambda e: self._filter_vm_list_modern())
        
        # Filter
        filter_container = ctk.CTkFrame(left_toolbar, fg_color="transparent")
        filter_container.pack(side="left")
        
        ctk.CTkLabel(
            filter_container,
            text="Filter:",
            font=("Segoe UI", 12, "bold")
        ).pack(side="left", padx=(0, 10))
        
        self.vm_filter_combo = ctk.CTkComboBox(
            filter_container,
            values=["All VMs", "Running", "Stopped", "Paused", "Error"],
            width=150,
            font=("Segoe UI", 11),
            border_color="#D1D5DB",
            button_color="#3B82F6",
            dropdown_font=("Segoe UI", 11),
            command=self._filter_vm_list_modern
        )
        self.vm_filter_combo.pack(side="left")
        self.vm_filter_combo.set("All VMs")  # Set default value
        
        # Right side: Actions
        right_toolbar = ctk.CTkFrame(toolbar, fg_color="transparent")
        right_toolbar.pack(side="right", padx=20)
        
        # Bulk actions
        ModernButton(
            right_toolbar,
            text="‚ö° Start All",
            command=self._start_all_vms,
            width=100,
            height=32,
            font=("Segoe UI", 11)
        ).pack(side="left", padx=5)
        
        ModernButton(
            right_toolbar,
            text="‚èπÔ∏è Stop All",
            command=self._stop_all_vms,
            width=100,
            height=32,
            font=("Segoe UI", 11),
            fg_color="#EF4444",
            hover_color="#DC2626"
        ).pack(side="left", padx=5)
        
        # VM List with modern scrollable frame
        list_container = ctk.CTkFrame(container, fg_color="transparent")
        list_container.pack(fill="both", expand=True)
        
        # Create a scrollable canvas for better performance
        self.vm_canvas = ctk.CTkCanvas(
            list_container,
            bg="#FFFFFF",
            highlightthickness=0
        )
        scrollbar = ctk.CTkScrollbar(
            list_container,
            orientation="vertical",
            command=self.vm_canvas.yview
        )
        self.vm_canvas.configure(yscrollcommand=scrollbar.set)
        
        # Frame inside canvas
        self.vm_list_inner = ctk.CTkFrame(self.vm_canvas, fg_color="#FFFFFF")
        self.vm_list_inner.bind(
            "<Configure>",
            lambda e: self.vm_canvas.configure(scrollregion=self.vm_canvas.bbox("all"))
        )
        
        # Create canvas window
        self.vm_canvas_window = self.vm_canvas.create_window(
            (0, 0),
            window=self.vm_list_inner,
            anchor="nw",
            width=self.vm_canvas.winfo_width()
        )
        
        # Bind resize event
        self.vm_canvas.bind("<Configure>", self._on_canvas_configure)
        
        # Pack canvas and scrollbar
        self.vm_canvas.pack(side="left", fill="both", expand=True)
        scrollbar.pack(side="right", fill="y")
    
    def _on_canvas_configure(self, event):
        """Handle canvas resize"""
        self.vm_canvas.itemconfig(self.vm_canvas_window, width=event.width)
    
