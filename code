        )
        self.terminal_vm_combo.pack(side="left")
        
        # Connection controls
        connection_frame = ctk.CTkFrame(controls_frame, fg_color="transparent")
        connection_frame.pack(side="left")
        
        # Auto-refresh button
        ModernButton(
            connection_frame,
            text="‚Üª Refresh List",
            command=self._refresh_terminal_vms,
            width=120,
            height=32,
            font=("Segoe UI", 11)
        ).pack(side="left", padx=(0, 10))
        
        ModernButton(
            connection_frame,
            text="üîå Connect",
            command=self._connect_terminal,
            width=100,
            height=32,
            font=("Segoe UI", 11),
            fg_color="#10B981",
            hover_color="#059669"
        ).pack(side="left")
        
        # ADD THIS: Install SSH requirements button (for admin)
        ModernButton(
            connection_frame,
            text="‚öôÔ∏è SSH Setup",
            command=self._setup_ssh_requirements,
            width=120,
            height=32,
            font=("Segoe UI", 11),
            fg_color="#8B5CF6",
            hover_color="#7C3AED"
        ).pack(side="left", padx=(10, 0))
        
        # Terminal widget - WITH ERROR HANDLING
        try:
            from localvm.gui.terminal_widget import TerminalWidget
            # Create terminal widget WITH is_admin=True parameter
            self.terminal_widget = TerminalWidget(container, is_admin=True)
            self.terminal_widget.pack(fill="both", expand=True, pady=(0, 15))
            
            # Set a flag that terminal is initialized
            self.terminal_initialized = True
            
            logger.info("Terminal widget created successfully with admin privileges")
            
        except ImportError as e:
            logger.error(f"Failed to import TerminalWidget: {e}")
            self._show_terminal_error(container, f"Missing module: {e}")
            self.terminal_widget = self._create_fallback_terminal_widget()
            self.terminal_initialized = False
            
        except Exception as e:
            logger.error(f"Failed to create terminal widget: {e}")
            import traceback
            logger.error(traceback.format_exc())
            self._show_terminal_error(container, str(e))
            self.terminal_widget = self._create_fallback_terminal_widget()
            self.terminal_initialized = False
        
        # Terminal footer with status
        footer_frame = ctk.CTkFrame(container, fg_color="#F3F4F6", height=40, corner_radius=8)
        footer_frame.pack(fill="x")
        footer_frame.pack_propagate(False)
        
        self.terminal_status_label = ctk.CTkLabel(
            footer_frame,
            text="Select a VM from the dropdown to connect",
            font=("Segoe UI", 11),
            text_color="#6B7280"
        )
        self.terminal_status_label.pack(side="left", padx=20)
        
        # Add reinitialize button in footer
        ModernButton(
            footer_frame,
            text="üîÑ Fix Terminal",
            command=self._reinitialize_terminal,
            width=120,
            height=30,
            font=("Segoe UI", 10)
        ).pack(side="right", padx=20)
        
        # Initial refresh
        self.after(100, self._refresh_terminal_vms)

    def _show_terminal_error(self, container, error_message):
        """Show error message when terminal fails to initialize"""
        error_frame = ctk.CTkFrame(container, fg_color="transparent")
        error_frame.pack(fill="both", expand=True, padx=20, pady=20)
        
        ctk.CTkLabel(
            error_frame,
            text="‚ö†Ô∏è SSH Terminal Error",
            font=("Segoe UI", 20, "bold"),
            text_color="#EF4444"
        ).pack(pady=(0, 10))
        
        ctk.CTkLabel(
            error_frame,
            text=f"Error: {error_message}",
            font=("Consolas", 11),
            text_color="#DC2626",
            wraplength=600
        ).pack(pady=(0, 20))
        
        # Installation instructions
        ctk.CTkLabel(
            error_frame,
            text="To fix this, install required packages:",
            font=("Segoe UI", 12, "bold")
        ).pack(pady=(0, 10))
        
        install_commands = [
            "pip install paramiko",
            "pip install cryptography",
            "pip install ssh-python"
        ]
        
        for cmd in install_commands:
            cmd_frame = ctk.CTkFrame(error_frame, fg_color="#1F2937", corner_radius=6)
            cmd_frame.pack(fill="x", pady=3, padx=20)
            
            ctk.CTkLabel(
                cmd_frame,
                text=cmd,
                font=("Consolas", 10),
                text_color="#60A5FA"
            ).pack(padx=10, pady=5)

    def _create_fallback_terminal_widget(self):
        """Create a fallback terminal widget to prevent None errors"""
        class FallbackTerminalWidget:
            def __init__(self):
                self.vm_id = None
                self.vm_name = None
                self.vm_ip = None
                self.connected = False
                self.is_admin = True  # Default to admin mode
                
            def set_vm_id(self, vm_id):
                self.vm_id = vm_id
                logger.debug(f"FallbackTerminalWidget: set_vm_id({vm_id})")
                
            def set_vm_name(self, name):
                self.vm_name = name
                logger.debug(f"FallbackTerminalWidget: set_vm_name({name})")
                
            def set_vm_ip(self, ip):
                self.vm_ip = ip
                logger.debug(f"FallbackTerminalWidget: set_vm_ip({ip})")
                
            def set_credentials(self, username=None, password=None, ssh_port=22):
                logger.debug(f"FallbackTerminalWidget: set_credentials({username}, ***, {ssh_port})")
                
            def connect(self):
                logger.debug("FallbackTerminalWidget: connect() called")
                return False, "Terminal requires SSH packages (paramiko, cryptography)"
                
            def clear_terminal(self):
                logger.debug("FallbackTerminalWidget: clear_terminal()")
                
            def destroy(self):
                logger.debug("FallbackTerminalWidget: destroy()")
                
            def send_command(self, command):
                logger.debug(f"FallbackTerminalWidget: send_command({command})")
                return False
        
        return FallbackTerminalWidget()

    def _setup_ssh_requirements(self):
        """Install SSH requirements"""
        try:
            import subprocess
            import sys
            
            # Show progress
            if hasattr(self, 'terminal_status_label'):
                self.terminal_status_label.configure(
                    text="Installing SSH requirements...",
                    text_color="#F59E0B"
                )
            
            requirements = ["paramiko", "cryptography", "ssh-python"]
            results = []
            
            for package in requirements:
                try:
                    logger.info(f"Installing {package}...")
                    result = subprocess.run(
                        [sys.executable, "-m", "pip", "install", package],
                        capture_output=True,
                        text=True,
                        check=True
                    )
                    results.append(f"‚úì {package}: {result.stdout[:100]}...")
                except subprocess.CalledProcessError as e:
                    results.append(f"‚úó {package}: {e.stderr[:100]}...")
            
            # Show results
            result_text = "\n".join(results)
            messagebox.showinfo(
                "Installation Results",
                f"SSH package installation results:\n\n{result_text}",
                parent=self
            )
            
            # Reinitialize terminal
            self._reinitialize_terminal()
            
        except Exception as e:
            logger.error(f"Failed to install SSH packages: {e}")
            messagebox.showerror(
                "Installation Failed",
                f"Failed to install SSH packages:\n\n{str(e)}",
                parent=self
            )

    def _reinitialize_terminal(self):
        """Reinitialize the terminal widget"""
        try:
            # Switch to terminal tab first
            if hasattr(self, 'vm_notebook'):
                self.vm_notebook.set("üíª SSH Terminal")
            
            # Clear the terminal tab
            if hasattr(self, 'vm_terminal_tab'):
                for widget in self.vm_terminal_tab.winfo_children():
                    widget.destroy()
            
            # Recreate terminal tab
            self._setup_vm_terminal_tab_modern()
            
            # Refresh VM list
            if hasattr(self, '_refresh_terminal_vms'):
                self._refresh_terminal_vms()
            
            # Show success message
            if hasattr(self, 'terminal_status_label'):
                self.terminal_status_label.configure(
                    text="Terminal reinitialized successfully",
                    text_color="#10B981"
                )
                
        except Exception as e:
            logger.error(f"Failed to reinitialize terminal: {e}")
            if hasattr(self, 'terminal_status_label'):
                self.terminal_status_label.configure(
                    text=f"Reinitialization failed: {str(e)[:50]}...",
                    text_color="#EF4444"
                )

    # Update the _connect_terminal method with proper checks:
    def _connect_terminal(self):
        """Connect terminal to selected VM"""
        vm_name = self.terminal_vm_combo.get()
        if not vm_name:
            if hasattr(self, 'terminal_status_label'):
                self.terminal_status_label.configure(
                    text="Please select a VM first",
                    text_color="#EF4444"
                )
            return
        
        # Find the VM
        vm = None
        for v in self.vms:
            if v.name == vm_name:
                vm = v
                break
        
        if not vm:
            if hasattr(self, 'terminal_status_label'):
                self.terminal_status_label.configure(
                    text=f"VM '{vm_name}' not found",
                    text_color="#EF4444"
                )
            return
        
        # CRITICAL: Ensure terminal_widget exists
        if not hasattr(self, 'terminal_widget') or self.terminal_widget is None:
            logger.error("terminal_widget is None, attempting to reinitialize")
            
            # Try to reinitialize
            self._reinitialize_terminal()
            
            # Wait a bit for reinitialization
            self.after(500, lambda: self._connect_terminal_to_vm(vm))
            return
        
        # Connect to VM
        self._connect_terminal_to_vm(vm)

    def _connect_terminal_to_vm(self, vm):
        """Actual connection logic"""
        try:
            # Set VM info
            self.terminal_widget.set_vm_id(vm.id)
            self.terminal_widget.set_vm_name(vm.name)
            self.terminal_widget.set_vm_ip(vm.ip_address)
            
            # Load credentials
            try:
                from localvm.credentials_manager import CredentialsManager
                credentials_manager = CredentialsManager()
                credentials = credentials_manager.get_credentials(vm.id)
                
                if credentials:
                    self.terminal_widget.set_credentials(
                        username=credentials.get('username'),
                        password=credentials.get('password'),
                        ssh_port=credentials.get('ssh_port', 22)
                    )
                else:
                    # No credentials found, show message
                    if hasattr(self, 'terminal_status_label'):
                        self.terminal_status_label.configure(
                            text=f"No SSH credentials found for {vm.name}",
                            text_color="#F59E0B"
                        )
            except Exception as cred_error:
                logger.error(f"Error loading credentials: {cred_error}")
            
            # Try to connect
            success, message = self.terminal_widget.connect()
            
            if hasattr(self, 'terminal_status_label'):
                if success:
                    self.terminal_status_label.configure(
                        text=f"Connected to {vm.name}",
                        text_color="#10B981"
                    )
                else:
                    self.terminal_status_label.configure(
                        text=f"Connection failed: {message}",
                        text_color="#EF4444"
                    )
                    
        except AttributeError as e:
            logger.error(f"Terminal widget method missing: {e}")
            if hasattr(self, 'terminal_status_label'):
                self.terminal_status_label.configure(
                    text="Terminal widget error - missing method",
                    text_color="#EF4444"
                )
            # Reinitialize terminal
            self._reinitialize_terminal()
            
        except Exception as e:
            logger.error(f"Error connecting terminal: {e}")
            if hasattr(self, 'terminal_status_label'):
                self.terminal_status_label.configure(
                    text=f"Connection error: {str(e)[:50]}...",
                    text_color="#EF4444"
                )



        
