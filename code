    def _connect_terminal(self):
        """Connect terminal to selected VM"""
        vm_name = self.terminal_vm_combo.get()
        if vm_name:
            # Find the VM
            for vm in self.vms:
                if vm.name == vm_name:
                    # Ensure terminal widget exists
                    if hasattr(self, 'terminal_widget'):
                        # Set VM info
                        self.terminal_widget.set_vm_id(vm.id)
                        self.terminal_widget.set_vm_name(vm.name)
                        self.terminal_widget.set_vm_ip(vm.ip_address)
                        
                        # Try to connect
                        success, message = self.terminal_widget.connect()
                        if success:
                            self.terminal_status_label.configure(
                                text=f"Connected to {vm.name}",
                                text_color="#10B981"
                            )
                        else:
                            self.terminal_status_label.configure(
                                text=f"Connection failed: {message}",
                                text_color="#EF4444"
                            )
                    else:
                        self.terminal_status_label.configure(
                            text="Terminal widget not initialized",
                            text_color="#EF4444"
                        )
                    break
            else:
                self.terminal_status_label.configure(
                    text=f"VM '{vm_name}' not found",
                    text_color="#EF4444"
                )
        else:
            self.terminal_status_label.configure(
                text="Please select a VM first",
                text_color="#EF4444"
            )
    
    def _open_vm_terminal(self, vm: VirtualMachine):
        """Open terminal for specific VM"""
        # First ensure we're in the VMs view (this creates the notebook if needed)
        self._show_vms()
        
        # Switch to terminal tab
        self.vm_notebook.set("üíª SSH Terminal")
        
        # Update terminal VM combo
        current_values = self.terminal_vm_combo.cget("values")
        if vm.name not in current_values:
            # Update the values list
            self.terminal_vm_combo.configure(values=list(current_values) + [vm.name])
        
        self.terminal_vm_combo.set(vm.name)
        
        # Trigger selection
        self._on_terminal_vm_selected(vm.name)
        
        # Update terminal widget
        if hasattr(self, 'terminal_widget'):
            self.terminal_widget.set_vm_id(vm.id)
            self.terminal_widget.set_vm_name(vm.name)
            self.terminal_widget.set_vm_ip(vm.ip_address)
            
            # Load credentials
            self._load_vm_credentials_for_terminal(vm.id)
            
            # Update status
            self.terminal_status_label.configure(
                text=f"Ready to connect to {vm.name}",
                text_color="#10B981"
            )



    def _create_vm_row(self, parent, vm: VirtualMachine):
        """Create a VM row for dashboard (for backward compatibility)"""
        # Use the modern card design instead of old row design
        self._create_vm_card_for_dashboard(parent, vm)



    def create_vm_with_credentials(self, vm_config: Dict, 
                                  credentials_settings: Dict = None) -> Tuple[bool, str, Optional[int]]:
        """
        Create VM with automatic credential generation
        
        Args:
            vm_config: VM configuration
            credentials_settings: Credentials settings
            
        Returns:
            Tuple of (success, message, vm_id)
        """
        try:
            logger.info(f"Creating VM with config: {vm_config}")
            
            # Validate required fields
            required_fields = ['name', 'hypervisor', 'os_type', 'cpu_cores', 'memory_mb', 'disk_gb']
            for field in required_fields:
                if field not in vm_config:
                    logger.error(f"Missing required field: {field}")
                    return False, f"Missing required field: {field}", None
            
            # Check if VM with same name already exists
            existing = self.db.execute_query(
                "SELECT id FROM virtual_machines WHERE name = ?", 
                (vm_config['name'],)
            )
            if existing:
                logger.error(f"VM with name '{vm_config['name']}' already exists")
                return False, f"VM with name '{vm_config['name']}' already exists", None
            
            # Prepare VM data with all fields
            vm_data = {
                'name': vm_config['name'],
                'description': vm_config.get('description', ''),
                'hypervisor': vm_config['hypervisor'],
                'os_type': vm_config['os_type'],
                'cpu_cores': int(vm_config['cpu_cores']),
                'memory_mb': int(vm_config['memory_mb']),
                'disk_gb': int(vm_config['disk_gb']),
                'ip_address': vm_config.get('ip_address', ''),
                'state': vm_config.get('state', 'Stopped'),
                'mac_address': vm_config.get('mac_address', ''),
                'network_type': vm_config.get('network_type', 'NAT'),
                'ssh_port': vm_config.get('ssh_port', 22)
            }
            
            # Insert VM into database
            logger.info(f"Inserting VM into database: {vm_data}")
            vm_id = self.db.insert_vm(vm_data)
            
            if vm_id is None:
                logger.error("Failed to insert VM into database")
                return False, "Failed to create VM in database", None
            
            logger.info(f"Database insert returned vm_id: {vm_id}")
            
            # Create credentials if requested
            message = f"VM '{vm_config['name']}' created successfully"
            
            if credentials_settings:
                try:
                    if credentials_settings.get('auto_generate', True):
                        # Auto-generate credentials
                        from localvm.credentials_manager import CredentialsManager
                        cred_manager = CredentialsManager()
                        credentials = cred_manager.create_vm_credentials(
                            vm_id=vm_id,
                            vm_name=vm_config['name'],
                            ip_address=vm_config.get('ip_address'),
                            username=credentials_settings.get('username'),
                            password=credentials_settings.get('password'),
                            ssh_port=credentials_settings.get('ssh_port', 22)
                        )
                        
                        if credentials:
                            message += " with auto-generated credentials"
                        else:
                            message += " (credential generation failed)"
                    else:
                        # Use manual credentials
                        success = self.credentials_manager.save_credentials(
                            vm_id=vm_id,
                            username=credentials_settings.get('username', 'root'),
                            password=credentials_settings.get('password', ''),
                            ssh_port=credentials_settings.get('ssh_port', 22),
                            ssh_key_path=credentials_settings.get('ssh_key_path')
                        )
                        
                        if success:
                            message += " with specified credentials"
                        else:
                            message += " (failed to save credentials)"
                except Exception as cred_error:
                    logger.error(f"Error creating credentials: {cred_error}")
                    logger.error(traceback.format_exc())
                    message += " (credential creation failed)"
            
            # Try to create actual VM based on hypervisor
            try:
                hypervisor = vm_config['hypervisor']
                if hypervisor == "VirtualBox" and "VirtualBox" in self.available_hypervisors:
                    vm_success, vm_message = self.create_virtualbox_vm(vm_config)
                    if vm_success:
                        message += f". {vm_message}"
                    else:
                        message += f". VirtualBox creation failed: {vm_message}"
                # Add other hypervisors here as needed
            except Exception as vm_create_error:
                logger.error(f"Error creating actual VM: {vm_create_error}")
                logger.error(traceback.format_exc())
                message += " (VM configuration recorded but physical VM not created)"
            
            logger.info(f"VM created successfully: {vm_config['name']} (ID: {vm_id})")
            return True, message, vm_id
            
        except Exception as e:
            logger.error(f"Error creating VM with credentials: {e}")
            logger.error(traceback.format_exc())
            return False, f"Error creating VM: {str(e)}", None


    def _on_vm_saved(self, vm: VirtualMachine, credentials_settings: dict):
        """Handle VM saved from dialog"""
        try:
            from localvm.vm_manager import VirtualMachineManager
            from localvm.database import DatabaseManager
            
            vm_manager = VirtualMachineManager()
            db = DatabaseManager()
            
            if vm.id:
                # Update existing VM
                success = db.update_vm(vm.id, vm.to_dict())
                message = "VM updated successfully"
            else:
                # Create new VM
                vm_data = vm.to_dict()
                success, message, vm_id = vm_manager.create_vm_with_credentials(vm_data, credentials_settings)
                
                if success and vm_id:
                    vm.id = vm_id  # Update VM object with new ID
            
            if success:
                # Save credentials if provided
                if credentials_settings and not credentials_settings.get('auto_generate', True):
                    # Save manual credentials
                    db.save_credentials(
                        vm_id=vm.id,
                        username=credentials_settings.get('username', 'root'),
                        password=credentials_settings.get('password', ''),
                        ssh_port=credentials_settings.get('ssh_port', 22),
                        ssh_key_path=credentials_settings.get('ssh_key_path')
                    )
                elif credentials_settings and credentials_settings.get('auto_generate', True):
                    # Auto-generate and save credentials
                    from localvm.credentials_manager import CredentialsManager
                    cred_manager = CredentialsManager()
                    cred_manager.create_vm_credentials(
                        vm_id=vm.id,
                        vm_name=vm.name,
                        ip_address=vm.ip_address,
                        username=credentials_settings.get('username'),
                        password=credentials_settings.get('password'),
                        ssh_port=credentials_settings.get('ssh_port', 22)
                    )
                
                self._show_toast(message)
                self._refresh_vm_view()  # Refresh the view
            else:
                messagebox.showerror("Error", message)
                
        except Exception as e:
            logger.error(f"Error saving VM: {e}")
            messagebox.showerror("Error", f"Failed to save VM: {str(e)}")
    
    def _create_vm_card_for_dashboard(self, parent, vm: VirtualMachine):
        """Create a modern VM card for dashboard"""
        card = CardFrame(parent, height=100, corner_radius=12)
        card.pack(fill="x", padx=10, pady=5)
        
        # Store VM ID
        card.vm_id = vm.id
        
        # Left side: Icon and basic info
        left_frame = ctk.CTkFrame(card, fg_color="transparent")
        left_frame.place(x=20, y=20)
        
        # OS Icon
        os_icons = {
            "Windows": "ü™ü",
            "Linux": "üêß",
            "macOS": "üçé",
            "BSD": "üëë",
            "Other": "üíª"
        }
        os_icon = os_icons.get(vm.os_type, "üíª")
        
        ctk.CTkLabel(
            left_frame,
            text=os_icon,
            font=("Segoe UI", 24)
        ).pack(side="left", padx=(0, 15))
        
        # VM Info
        info_frame = ctk.CTkFrame(left_frame, fg_color="transparent")
        info_frame.pack(side="left")
        
        # VM Name with status dot
        name_frame = ctk.CTkFrame(info_frame, fg_color="transparent")
        name_frame.pack(anchor="w")
        
        # Status dot
        status_colors = {
            "Running": "#10B981",
            "Stopped": "#EF4444",
            "Paused": "#F59E0B",
            "Error": "#DC2626"
        }
        ctk.CTkLabel(
            name_frame,
            text="‚óè",
            font=("Segoe UI", 12),
            text_color=status_colors.get(vm.state, "#6B7280")
        ).pack(side="left", padx=(0, 10))
        
        # VM Name
        ctk.CTkLabel(
            name_frame,
            text=vm.name,
            font=("Segoe UI", 16, "bold"),
            cursor="hand2"
        ).pack(side="left")
        
        # Click to view details
        for widget in name_frame.winfo_children():
            widget.bind("<Button-1>", lambda e, v=vm: self._show_vm_details_modern(v))
        
        # Additional info
        ctk.CTkLabel(
            info_frame,
            text=f"{vm.hypervisor} ‚Ä¢ {vm.os_type} ‚Ä¢ {vm.cpu_cores} CPU ‚Ä¢ {vm.memory_gb:.1f}GB RAM",
            font=("Segoe UI", 12),
            text_color="#6B7280"
        ).pack(anchor="w", pady=(5, 0))
        
        # Right side: Status and actions
        right_frame = ctk.CTkFrame(card, fg_color="transparent")
        right_frame.place(relx=1.0, x=-20, y=20, anchor="ne")
        
        # Status label
        ctk.CTkLabel(
            right_frame,
            text=vm.state,
            font=("Segoe UI", 12, "bold"),
            text_color=status_colors.get(vm.state, "#6B7280")
        ).pack(side="left", padx=(0, 20))
        
        # Quick action buttons
        if vm.state == "Running":
            action_color = "#EF4444"
            action_text = "‚èπ Stop"
            action_cmd = lambda: self._stop_vm(vm.id)
        else:
            action_color = "#10B981"
            action_text = "‚ñ∂ Start"
            action_cmd = lambda: self._start_vm(vm.id)
        
        ModernButton(
            right_frame,
            text=action_text,
            command=action_cmd,
            width=80,
            height=30,
            font=("Segoe UI", 10),
            fg_color=action_color,
            hover_color=self._darken_color(action_color)
        ).pack(side="left")

    ########### LogView code 
    def _setup_log_viewer_tab(self):
        """Setup log viewer tab"""
        try:
            from localvm.gui.log_viewer import LogViewerWidget
            
            # Get log file path from config
            from localvm.config import config
            import os
            from pathlib import Path
            
            log_file = None
            if hasattr(config, 'log_file'):
                log_file = Path(config.log_file)
            elif hasattr(config, 'LOG_FILE'):
                log_file = Path(config.LOG_FILE)
            else:
                # Default log file path
                log_dir = os.path.join(os.path.expanduser("~"), ".localvm", "logs")
                log_file = Path(log_dir) / "localvm.log"
            
            if log_file and log_file.exists():
                self.log_viewer = LogViewerWidget(self.log_viewer_tab, str(log_file))
                self.log_viewer.pack(fill="both", expand=True, padx=10, pady=10)
            else:
                # Show message if no log file
                container = ctk.CTkFrame(self.log_viewer_tab, fg_color="transparent")
                container.pack(fill="both", expand=True)
                
                ctk.CTkLabel(
                    container,
                    text="üìã",
                    font=("Segoe UI", 64),
                    text_color="#D1D5DB"
                ).pack(pady=(0, 20))
                
                ctk.CTkLabel(
                    container,
                    text="Log Viewer",
                    font=("Segoe UI", 24, "bold"),
                    text_color="#374151"
                ).pack(pady=(0, 10))
                
                ctk.CTkLabel(
                    container,
                    text="Log file not found or logging not configured",
                    font=("Segoe UI", 14),
                    text_color="#6B7280"
                ).pack(pady=(0, 30))
                
                ctk.CTkLabel(
                    container,
                    text=f"Expected log file: {log_file}",
                    font=("Segoe UI", 12),
                    text_color="#9CA3AF"
                ).pack(pady=(0, 20))
                
                # Create log directory button
                ModernButton(
                    container,
                    text="Create Log Directory",
                    command=lambda: self._create_log_directory(log_file),
                    width=180,
                    height=40,
                    font=("Segoe UI", 12)
                ).pack()
                
        except ImportError:
            # Log viewer widget not available
            self._setup_basic_log_viewer()
        except Exception as e:
            logger.error(f"Error setting up log viewer: {e}")
            self._setup_basic_log_viewer()
    
    def _setup_basic_log_viewer(self):
        """Setup basic log viewer when LogViewerWidget is not available"""
        container = ctk.CTkFrame(self.log_viewer_tab, fg_color="transparent")
        container.pack(fill="both", expand=True, padx=20, pady=20)
        
        # Header
        ctk.CTkLabel(
            container,
            text="Log Viewer",
            font=("Segoe UI", 24, "bold"),
            text_color="#374151"
        ).pack(anchor="w", pady=(0, 20))
        
        # Log display area
        log_frame = CardFrame(container, corner_radius=12)
        log_frame.pack(fill="both", expand=True, pady=(0, 20))
        
        # Create a simple text widget for logs
        self.log_text = ctk.CTkTextbox(
            log_frame,
            font=("Consolas", 10),
            wrap="word",
            state="disabled"
        )
        self.log_text.pack(fill="both", expand=True, padx=10, pady=10)
        
        # Toolbar
        toolbar = ctk.CTkFrame(container, fg_color="transparent")
        toolbar.pack(fill="x", pady=(0, 10))
        
        ModernButton(
            toolbar,
            text="‚Üª Refresh Logs",
            command=self._refresh_logs,
            width=120,
            height=35,
            font=("Segoe UI", 11)
        ).pack(side="left", padx=(0, 10))
        
        ModernButton(
            toolbar,
            text="üóëÔ∏è Clear",
            command=self._clear_logs,
            width=80,
            height=35,
            font=("Segoe UI", 11),
            fg_color="#EF4444",
            hover_color="#DC2626"
        ).pack(side="left", padx=(0, 10))
        
        ModernButton(
            toolbar,
            text="üìã Copy",
            command=self._copy_logs,
            width=80,
            height=35,
            font=("Segoe UI", 11),
            fg_color="#6B7280",
            hover_color="#4B5563"
        ).pack(side="left")
        
        # Load initial logs
        self._refresh_logs()
    
    def _refresh_logs(self):
        """Refresh log display"""
        try:
            # Try to read log file
            import logging
            import os
            from pathlib import Path
            
            # Get root logger
            root_logger = logging.getLogger()
            
            # Try to find log file from handlers
            log_file = None
            for handler in root_logger.handlers:
                if hasattr(handler, 'baseFilename'):
                    log_file = Path(handler.baseFilename)
                    break
            
            if not log_file:
                # Check common log locations
                possible_locations = [
                    Path("logs/localvm.log"),
                    Path("localvm.log"),
                    Path(os.path.join(os.path.expanduser("~"), ".localvm", "logs", "localvm.log")),
                    Path(os.path.join(os.path.expanduser("~"), "LocalVM", "logs", "localvm.log")),
                ]
                
                for location in possible_locations:
                    if location.exists():
                        log_file = location
                        break
            
            if log_file and log_file.exists():
                # Read log file
                with open(log_file, 'r', encoding='utf-8', errors='ignore') as f:
                    log_content = f.read()
                
                # Display logs
                self.log_text.configure(state="normal")
                self.log_text.delete("1.0", "end")
                self.log_text.insert("1.0", log_content)
                self.log_text.configure(state="disabled")
                
                # Scroll to end
                self.log_text.see("end")
            else:
                # Show message
                self.log_text.configure(state="normal")
                self.log_text.delete("1.0", "end")
                self.log_text.insert("1.0", "No log file found.\n\nCheck log configuration.")
                self.log_text.configure(state="disabled")
                
        except Exception as e:
            # Show error in log display
            self.log_text.configure(state="normal")
            self.log_text.delete("1.0", "end")
            self.log_text.insert("1.0", f"Error loading logs: {str(e)}")
            self.log_text.configure(state="disabled")
    
    def _clear_logs(self):
        """Clear log display"""
        try:
            self.log_text.configure(state="normal")
            self.log_text.delete("1.0", "end")
            self.log_text.configure(state="disabled")
            self._show_toast("Log display cleared")
        except Exception as e:
            logger.error(f"Error clearing logs: {e}")
    
    def _copy_logs(self):
        """Copy logs to clipboard"""
        try:
            log_content = self.log_text.get("1.0", "end-1c")
            if log_content:
                self.clipboard_clear()
                self.clipboard_append(log_content)
                self._show_toast("Logs copied to clipboard")
        except Exception as e:
            logger.error(f"Error copying logs: {e}")
            self._show_toast("Failed to copy logs", text_color="#EF4444")
    
    def _create_log_directory(self, log_file_path):
        """Create log directory and file"""
        try:
            import os
            from pathlib import Path
            
            # Create directory
            log_dir = log_file_path.parent
            log_dir.mkdir(parents=True, exist_ok=True)
            
            # Create empty log file
            if not log_file_path.exists():
                log_file_path.touch()
            
            # Setup basic logging
            import logging
            
            # Configure logging
            logging.basicConfig(
                level=logging.INFO,
                format='%(asctime)s - %(name)s - %(levelname)s - %(message)s',
                handlers=[
                    logging.FileHandler(str(log_file_path)),
                    logging.StreamHandler()
                ]
            )
            
            self._show_toast(f"Log directory created: {log_dir}")
            self._refresh_logs()
            
        except Exception as e:
            logger.error(f"Error creating log directory: {e}")
            self._show_toast(f"Failed to create log directory: {str(e)}", text_color="#EF4444")

    ##################
    
    def _show_file_manager(self):
        """Show file manager"""
        try:
            dialog = FileManagerDialog(self)
        except Exception as e:
            messagebox.showerror("Error", f"Failed to open File Manager: {str(e)}")
    
    def _show_firewall(self):
        """Show NGFW manager"""
        try:
            dialog = FirewallDialog(self)
        except Exception as e:
            messagebox.showerror("Error", f"Failed to open Firewall: {str(e)}")
    
    def _show_australia_ips(self):
        """Show Australian IP generator"""
        dialog = AustraliaIPDialog(self)
    
    def _show_credentials(self, vm_id: int):
        """Show credentials dialog"""
        dialog = CredentialsDialog(self, vm_id)
    
    
    def _toggle_vm_state(self, vm: VirtualMachine):
        """Toggle VM state"""
        new_state = "Running" if vm.state != "Running" else "Stopped"
        if self.db.update_vm_state(vm.id, new_state):
            vm.state = new_state
            self._show_dashboard()
            messagebox.showinfo("Success", f"VM '{vm.name}' is now {new_state}")
    
    def _start_vm(self, vm_id: int):
        """Start a VM"""
        if self.db.update_vm_state(vm_id, "Running"):
            self._load_vms()
            self._refresh_terminal_vms()
            messagebox.showinfo("Success", "VM started")
    
    def _stop_vm(self, vm_id: int):
        """Stop a VM"""
        if self.db.update_vm_state(vm_id, "Stopped"):
            self._load_vms()
            self._refresh_terminal_vms()
            messagebox.showinfo("Success", "VM stopped")
    
    def _pause_vm(self, vm_id: int):
        """Pause a VM"""
        if self.db.update_vm_state(vm_id, "Paused"):
            self._load_vms()
            self._refresh_terminal_vms()
            messagebox.showinfo("Success", "VM paused")
    
    def _edit_vm(self, vm: VirtualMachine):
        """Edit a VM"""
        def update_callback(updated_vm: VirtualMachine, credentials_settings: Dict):
            try:
                # Update VM in database
                success, message = self.vm_manager.update_vm(updated_vm)
                
                if not success:
                    messagebox.showerror("Error", f"Failed to update VM: {message}")
                    return
                
                # Handle credentials
                final_message = f"VM '{updated_vm.name}' updated successfully"
                
                # Note: You need to implement credentials_manager in your VM manager
                if hasattr(self.vm_manager, 'credentials_manager') and credentials_settings:
                    if credentials_settings.get('auto_generate', True):
                        # Auto-generate new credentials
                        new_creds = self.vm_manager.credentials_manager.create_vm_credentials(
                            vm_id=vm.id,
                            vm_name=updated_vm.name,
                            ip_address=updated_vm.ip_address
                        )
                        
                        if new_creds:
                            final_message += " with new auto-generated credentials"
                        else:
                            final_message += " (failed to generate new credentials)"
                    else:
                        # Manual credentials
                        username = credentials_settings.get('username')
                        password = credentials_settings.get('password')
                        ssh_port = credentials_settings.get('ssh_port', 22)
                        
                        # Save credentials
                        if username and password:
                            success = self.vm_manager.credentials_manager.save_credentials(
                                vm_id=vm.id,
                                username=username,
                                password=password,
                                ssh_port=ssh_port,
                                ssh_key_path=None  # Add SSH key handling if needed
                            )
                            
                            if success:
                                final_message += " with updated credentials"
                            else:
                                final_message += " (failed to update credentials)"
                        else:
                            final_message += " (credentials not changed)"
                else:
                    final_message += " (credentials manager not available)"
                
                messagebox.showinfo("Success", final_message)
                
                # Refresh VM list and terminal
                self._load_vms()
                self._refresh_terminal_vms()
                
            except Exception as e:
                logger.error(f"Error updating VM: {e}")
                messagebox.showerror("Error", f"Failed to update VM: {str(e)}")
        
        # Create dialog with existing VM
        dialog = VMDialog(self, f"Edit {vm.name}", vm, update_callback)
    
    def _delete_vm(self, vm_id: int):
        """Delete a VM"""
        if messagebox.askyesno("Confirm", "Are you sure you want to delete this VM?"):
            if self.db.delete_vm(vm_id):
                self._load_vms()
                self._refresh_terminal_vms()
                messagebox.showinfo("Success", "VM deleted successfully!")
    
    def _connect_to_vm(self, vm: VirtualMachine):
        """Connect to VM via SSH"""
        if not vm.ip_address:
            messagebox.showwarning("No IP", "VM IP address is not set. Please set an IP address first.")
            return
        
        # Switch to terminal tab
        self._open_vm_terminal(vm)
        
        # Try to connect automatically
        if hasattr(self.terminal_widget, '_connect_ssh'):
            # Give a moment for the terminal to initialize
            self.after(1000, self.terminal_widget._connect_ssh)
    
    def _show_settings(self):
        """Show settings view"""
        self._clear_content()
        self.welcome_label.configure(text="Settings")
        
        settings_frame = CardFrame(self.content_frame)
        settings_frame.pack(fill="both", expand=True, padx=20, pady=20)
        
        ctk.CTkLabel(
            settings_frame,
            text="Application Settings",
            font=("Segoe UI", 18, "bold")
        ).pack(anchor="w", padx=20, pady=(20, 10))
        
        # Settings options
        settings = [
            ("Database Path:", self.config.database_path),
            ("Default Theme:", self.config.default_theme),
            ("Window Size:", self.config.window_size),
            ("Log File:", self.config.log_file if hasattr(self.config, 'log_file') else "Not set"),
        ]
        
        for i, (label, value) in enumerate(settings):
            frame = ctk.CTkFrame(settings_frame, fg_color="transparent")
            frame.pack(fill="x", padx=20, pady=10)
            
            ctk.CTkLabel(frame, text=label, font=("Segoe UI", 12)).pack(side="left")
            ctk.CTkLabel(frame, text=value, font=("Segoe UI", 12, "bold")).pack(side="right")
        
        # Advanced settings button
        advanced_frame = ctk.CTkFrame(settings_frame, fg_color="transparent")
        advanced_frame.pack(fill="x", padx=20, pady=20)
        
        ModernButton(
            advanced_frame,
            text="Advanced Settings",
            command=self._show_advanced_settings,
            width=200
        ).pack()
    
    def _show_advanced_settings(self):
        """Show advanced settings dialog"""
        try:
            from localvm.gui.advanced_settings_dialog import AdvancedSettingsDialog
            dialog = AdvancedSettingsDialog(self, self.config)
            dialog.grab_set()
        except ImportError as e:
            messagebox.showerror("Error", f"Advanced settings not available: {str(e)}")
        except Exception as e:
            messagebox.showerror("Error", f"Failed to open advanced settings: {str(e)}")
    
    def _show_stats(self):
        """Show statistics view"""
        self._clear_content()
        self.welcome_label.configure(text="Statistics")
        
        stats_frame = CardFrame(self.content_frame)
        stats_frame.pack(fill="both", expand=True, padx=20, pady=20)
        
        ctk.CTkLabel(
            stats_frame,
            text="VM Statistics",
            font=("Segoe UI", 18, "bold")
        ).pack(anchor="w", padx=20, pady=(20, 10))
        
        # Calculate stats
        total_cpu = sum(vm.cpu_cores for vm in self.vms)
        total_memory = sum(vm.memory_mb for vm in self.vms)
        total_disk = sum(vm.disk_gb for vm in self.vms)
        
        stats = [
            ("Total VMs:", len(self.vms)),
            ("Total CPU Cores:", total_cpu),
            ("Total Memory:", f"{total_memory/1024:.1f} GB"),
            ("Total Disk Space:", f"{total_disk} GB"),
            ("Avg Memory per VM:", f"{total_memory/len(self.vms)/1024:.1f} GB" if self.vms else "0 GB"),
            ("Running VMs:", sum(1 for vm in self.vms if vm.state == "Running")),
            ("Stopped VMs:", sum(1 for vm in self.vms if vm.state == "Stopped")),
            ("Paused VMs:", sum(1 for vm in self.vms if vm.state == "Paused")),
        ]
        
        for label, value in stats:
            frame = ctk.CTkFrame(stats_frame, fg_color="transparent")
            frame.pack(fill="x", padx=20, pady=8)
            
            ctk.CTkLabel(frame, text=label, font=("Segoe UI", 12)).pack(side="left")
            ctk.CTkLabel(frame, text=str(value), font=("Segoe UI", 12, "bold")).pack(side="right")
    
